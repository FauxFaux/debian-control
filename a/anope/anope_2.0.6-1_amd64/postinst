#!/bin/sh
set -e
# Automatically added by dh_installinit/11.1.6
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/anope" ]; then
		update-rc.d anope defaults >/dev/null
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		invoke-rc.d anope $_dh_action || exit 1
	fi
fi
# End automatically added section
