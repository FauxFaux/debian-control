#!/bin/sh

# atheme
# Version:	atheme-2.2.0  06/08/07
# Author:	Bradley Smith <brad@brad-smith.co.uk>

set -e

case "$1" in
    purge)
	rm -rf /etc/atheme
        rm -rf /var/run/atheme
        rm -rf /var/lib/atheme
        rm -rf /var/log/atheme
    ;;

esac

# Automatically added by dh_installinit/11.3.5
if [ "$1" = "purge" ] ; then
	update-rc.d atheme-services remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installdeb/11.3.5
dpkg-maintscript-helper rm_conffile /etc/default/atheme-services 7.2.9-2\~ -- "$@"
# End automatically added section


exit 0
