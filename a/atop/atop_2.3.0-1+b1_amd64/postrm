		deb-systemd-helper mask 'atop.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'atop.service' >/dev/null || true
		deb-systemd-helper unmask 'atop.service' >/dev/null || true
	fi
fi
# End automatically added section


