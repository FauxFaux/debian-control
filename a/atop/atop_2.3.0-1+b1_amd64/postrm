		deb-systemd-helper mask 'atopacct.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'atopacct.service' >/dev/null || true
		deb-systemd-helper unmask 'atopacct.service' >/dev/null || true
	fi
fi
