#!/bin/sh
set -e

if [ "$1" = "purge" ]; then
  for CONFF in /etc/auto.master /etc/auto.net /etc/auto.misc /etc/auto.smb /etc/autofs.conf /etc/default/autofs; do
    rm -f $CONFF $CONFF.ucf-dist $CONFF.ucf-old $CONFF.ucf-new
    if which ucf  >/dev/null; then ucf  --purge $CONFF; fi
    if which ucfr >/dev/null; then ucfr --purge autofs $CONFF; fi
  done
fi

# Automatically added by dh_installinit/10.10.9
if [ "$1" = "purge" ] ; then
	update-rc.d autofs remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.10.9
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'autofs.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'autofs.service' >/dev/null
		deb-systemd-helper unmask 'autofs.service' >/dev/null
	fi
fi
# End automatically added section

