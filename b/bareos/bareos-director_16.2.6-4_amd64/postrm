#!/bin/sh

set -e


case "$1" in
  purge)
    rm -f  /etc/bareos/bareos-dir.conf /etc/bareos/bareos-dir.conf.dist
    rm -rf /etc/bareos/bareos-dir.d/
    rm -rf /etc/bareos/bareos-dir-export/
  ;;
esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.2.1
if [ "$1" = "purge" ] ; then
	update-rc.d bareos-dir remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.2.1
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'bareos-director.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'bareos-director.service' >/dev/null || true
		deb-systemd-helper unmask 'bareos-director.service' >/dev/null || true
	fi
fi
# End automatically added section


exit 0
