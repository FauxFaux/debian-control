#!/bin/sh

set -e

case "$1" in
    install)
    ;;
    upgrade)
        if [ $2 = "1.1.0-1" ]; then
         echo "There is an issue in version 1.1.0-1, you need to first remove the package, then to install it. There is no impact on data."
         exit 1
        fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac




