#!/bin/sh
set -e

if test "$1" = "purge"; then

    dpkg-statoverride --remove /etc/bird >/dev/null 2>/dev/null || true

    for conf in bird.conf bird6.conf; do
	dpkg-statoverride --remove /etc/bird/$conf >/dev/null 2>/dev/null || true
	for ext in '~' '%' .bak .ucf-new .ucf-old .ucf-dist;  do
	    rm -f /etc/bird/$conf$ext
	done
	rm -f /etc/bird/$conf
	if which ucf >/dev/null; then
            ucf --purge /etc/bird/$conf
	fi
	if which ucfr >/dev/null; then
            ucfr --purge bird /etc/bird/$conf
	fi
    done

    deluser --quiet bird > /dev/null || true
fi

# Automatically added by dh_installinit/11.2.1
if [ "$1" = "purge" ] ; then
	update-rc.d bird6 remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit/11.2.1
if [ "$1" = "purge" ] ; then
	update-rc.d bird remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.2.1
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'bird.service' 'bird6.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'bird.service' 'bird6.service' >/dev/null || true
		deb-systemd-helper unmask 'bird.service' 'bird6.service' >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.2.1
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'bird.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'bird.service' >/dev/null || true
		deb-systemd-helper unmask 'bird.service' >/dev/null || true
	fi
fi
# End automatically added section


exit 0
