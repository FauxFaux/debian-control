#!/bin/sh

set -e

case "$1" in

  remove)
# Automatically added by dh_installmenu/11.1.5
inst=/etc/menu-methods/blackbox
if [ "$1" = "remove" ] && [ -f "$inst" ]; then chmod a-x $inst ; fi
if [ -x "`which update-menus 2>/dev/null`" ]; then update-menus ; fi
# End automatically added section

  ;;
  
  purge)
    #remove the files that install-menu creates:
    if [ -d /etc/X11/blackbox ]; then rm -rf /etc/X11/blackbox ; fi
  ;;

  upgrade);;
  
  *)
    echo "postrm called with unknown argument \`$1'" >&2
    exit 0
  ;;

esac

