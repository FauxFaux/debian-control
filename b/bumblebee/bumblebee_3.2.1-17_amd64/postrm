#!/bin/sh
# postrm script for bumblebee
#
# see: dh_installdeb(1)

set -e

case "$1" in
  purge)
    groupdel bumblebee || true
    # keep this as old versions did not mark these files as conffiles
    for file in bumblebee.conf xorg.conf.nvidia xorg.conf.nouveau; do
        rm -f /etc/bumblebee/$file
    done

    ;;
  remove)
    # Do not treat /etc/modprobe.d/bumblebee-nvidia.conf as a conffile
    # LP: #1242785, https://github.com/Bumblebee-Project/Bumblebee/issues/525
    rm -f /etc/modprobe.d/bumblebee.conf

    ;;
esac

# Automatically added by dh_installdeb/10.10.9
dpkg-maintscript-helper rm_conffile /etc/bash_completion.d/bumblebee 3.2.1-8~ -- "$@"
# End automatically added section
# Automatically added by dh_installdeb/10.10.9
dpkg-maintscript-helper rm_conffile /etc/modprobe.d/bumblebee.conf 3.2.1-6~ -- "$@"
# End automatically added section
# Automatically added by dh_installinit/10.10.9
if [ "$1" = "purge" ] ; then
	update-rc.d bumblebeed remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.10.9
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'bumblebeed.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'bumblebeed.service' >/dev/null
		deb-systemd-helper unmask 'bumblebeed.service' >/dev/null
	fi
fi
# End automatically added section

