#!/bin/sh

# postinst script for burrow
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure|reconfigure)
        if ! getent passwd burrow >/dev/null; then
            # Adding system user: burrow.
            adduser \
                --system \
                --group \
                --no-create-home \
                --home /nonexistent \
                --gecos "Burrow Kafka Consumer Offset Monitor" \
                --shell /bin/false \
                burrow >/dev/null 2>/dev/null || :
        fi

        # chown burrow directories
        chown burrow:burrow /var/log/burrow
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installsystemd/11.3.2
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if deb-systemd-helper debian-installed 'burrow.service'; then
		# This will only remove masks created by d-s-h on package removal.
		deb-systemd-helper unmask 'burrow.service' >/dev/null || true

		if deb-systemd-helper --quiet was-enabled 'burrow.service'; then
			# Create new symlinks, if any.
			deb-systemd-helper enable 'burrow.service' >/dev/null || true
		fi
	fi

	# Update the statefile to add new symlinks (if any), which need to be cleaned
	# up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'burrow.service' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.3.2
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -d /run/systemd/system ]; then
		systemctl --system daemon-reload >/dev/null || true
		if [ -n "$2" ]; then
			deb-systemd-invoke try-restart 'burrow.service' >/dev/null || true
		fi
	fi
fi
# End automatically added section


exit 0

