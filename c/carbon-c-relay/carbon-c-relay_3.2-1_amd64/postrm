#!/bin/sh
set -e

if dpkg-maintscript-helper supports mv_conffile 2>/dev/null; then
    dpkg-maintscript-helper mv_conffile /etc/carbon/carbon-c-relay.conf /etc/carbon-c-relay.conf 0.40~ -- "$@"
fi

case "$1" in
    purge)
        [ ! -f /etc/default/carbon-c-relay ] || rm /etc/default/carbon-c-relay

        if [ -x "$(command -v deluser)" ]; then
            deluser --quiet --system carbon-c-relay > /dev/null || true
        else
            echo >&2 "not removing carbon-c-relay system account because deluser command was not found"
        fi

    ;;

    abort-install|abort-upgrade|remove|upgrade|failed-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


# Automatically added by dh_installinit/10.9.2
if [ "$1" = "purge" ] ; then
	update-rc.d carbon-c-relay remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.9.2
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'carbon-c-relay.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'carbon-c-relay.service' >/dev/null
		deb-systemd-helper unmask 'carbon-c-relay.service' >/dev/null
	fi
fi
# End automatically added section

