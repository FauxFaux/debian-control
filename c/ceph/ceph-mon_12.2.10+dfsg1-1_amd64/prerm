#!/bin/sh
# vim: set noet ts=8:

set -e

case "$1" in
    remove)
	invoke-rc.d ceph stop mon || {
	    RESULT=$?
	    if [ $RESULT != 100 ]; then
		exit $RESULT
	    fi
	}
	;;

    *)
	;;
esac

# Automatically added by dh_systemd_start/12
if [ -d /run/systemd/system ] && [ "$1" = remove ]; then
	deb-systemd-invoke stop 'ceph-mon.target' >/dev/null || true
fi
# End automatically added section

# Automatically added by dh_python2:
if which pyclean >/dev/null 2>&1; then
	pyclean -p ceph-mon 
else
	dpkg -L ceph-mon | grep '\.py$' | while read file
	do
		rm -f "${file}"[co] >/dev/null
  	done
fi

# End automatically added section


exit 0
