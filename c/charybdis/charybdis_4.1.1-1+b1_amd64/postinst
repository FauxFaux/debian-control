#!/bin/sh
# postinst script for charybdis
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        # add a aegir user if one does not already exist
        if ! getent passwd charybdis >/dev/null ; then
            echo "adding charybdis user..."
            adduser --quiet --system --no-create-home --group \
                --home "/usr/lib/charybdis" \
                --shell '/bin/false' \
                --gecos 'Charybdis IRC server,,,' \
                charybdis
        fi
        chgrp charybdis /etc/charybdis
        chmod g+r,o-rwx /etc/charybdis
        chown charybdis:charybdis /var/lib/charybdis
        chmod 750 /var/lib/charybdis
        touch /var/log/charybdis/userlog /var/log/charybdis/operlog /var/log/charybdis/serverlog /var/log/charybdis/killlog /var/log/charybdis/operspylog
        chown charybdis:adm /var/log/charybdis /var/log/charybdis/userlog /var/log/charybdis/operlog /var/log/charybdis/serverlog /var/log/charybdis/killlog /var/log/charybdis/operspylog
        chmod 750 /var/log/charybdis /var/log/charybdis/userlog /var/log/charybdis/operlog /var/log/charybdis/serverlog /var/log/charybdis/killlog /var/log/charybdis/operspylog
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.4.1
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/charybdis" ]; then
		update-rc.d charybdis defaults >/dev/null
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		invoke-rc.d charybdis $_dh_action || exit 1
	fi
fi
# End automatically added section


exit 0
