#!/bin/sh

set -e

case "$1" in
remove)
	[ -e /usr/sbin/update-inetd ] && update-inetd --remove "kermit"
	[ -e /var/run/iksd ] && rm -f /var/run/iksd.db
	;;
purge)
    rmdir /etc/kermit >/dev/null 2>&1 || true
	;;
esac

# Automatically added by dh_installmenu/11.2.1
if [ -x "`which update-menus 2>/dev/null`" ]; then update-menus ; fi
# End automatically added section
# Automatically added by dh_installdebconf/11.2.1
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


exit 0
