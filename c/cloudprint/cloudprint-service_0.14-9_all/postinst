#!/bin/sh
# postinst script for cloudprint-service
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

    install -d -o root -m 0700 /var/lib/cloudprintd

    for auth in authfile authfile.sasl ; do \
        if [ -f /var/lib/cloudprint/$auth ] ; then \
            mv /var/lib/cloudprint/$auth /var/lib/cloudprintd/$auth; \
        fi \
    done

    if [ -d /var/lib/cloudprint ] ; then \
        rmdir /var/lib/cloudprint ; \
    fi

    if [ -e /etc/init.d/cloudprintd/authfile.json \
            -a -e /etc/init.d/cloudprintd/authfile ] ; then \
        rm -f /etc/init.d/cloudprintd/authfile;
    fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_systemd_enable/10.10.8
# This will only remove masks created by d-s-h on package removal.
deb-systemd-helper unmask 'cloudprintd.service' >/dev/null || true

# was-enabled defaults to true, so new installations run enable.
if deb-systemd-helper --quiet was-enabled 'cloudprintd.service'; then
	# Enables the unit on first installation, creates new
	# symlinks on upgrades if the unit file has changed.
	deb-systemd-helper enable 'cloudprintd.service' >/dev/null || true
else
	# Update the statefile to add new symlinks (if any), which need to be
	# cleaned up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'cloudprintd.service' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_start/10.10.8
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
	deb-systemd-invoke start 'cloudprintd.service' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installdeb/10.10.8
dpkg-maintscript-helper rm_conffile /etc/init.d/cloudprintd 0.12-3~ -- "$@"
# End automatically added section


exit 0
