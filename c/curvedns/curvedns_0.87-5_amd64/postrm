#!/bin/sh
set -e

case "$1" in
	purge)
		deluser --quiet curvedns >/dev/null || true
		rm -rf /var/lib/curvedns
		rm -f /etc/curvedns/README /etc/curvedns/curvedns_private_key.hex
		;;
esac

# Automatically added by dh_installinit/11.3.5
if [ "$1" = "purge" ] ; then
	update-rc.d curvedns remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.3.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'curvedns.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'curvedns.service' >/dev/null || true
		deb-systemd-helper unmask 'curvedns.service' >/dev/null || true
	fi
fi
# End automatically added section




