case "$1" in
    purge)
	    for ext in '~' '%' .bak .ucf-new .ucf-old .ucf-dist;  do
		rm -f /etc/cxref/config$ext
		rm -f /etc/cxref/cxref-cpp.defines$ext
	    done
	    
	    rm -f /etc/cxref/config /etc/cxref/cxref-cpp.defines 
	    
	    if which ucf >/dev/null; then
		ucf --purge /etc/cxref/config
		ucf --purge /etc/cxref/cxref-cpp.defines
	    fi        
	    if which ucfr >/dev/null; then
		ucfr --purge cxref /etc/cxref/config
		ucfr --purge cxref /etc/cxref/cxref-cpp.defines
	    fi       
	    ;;
esac

# Automatically added by dh_installdebconf
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section

