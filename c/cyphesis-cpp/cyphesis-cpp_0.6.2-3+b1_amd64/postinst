#!/bin/sh

set -e

if [ "$1" = configure ] ;
then

    # Add user cyphesis as system user
            adduser --system --quiet --no-create-home --home /usr/share/cyphesis --gecos "Cyphesis C++ Administrator" cyphesis

fi

# Automatically added by dh_installinit/11.4.1
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/cyphesis-cpp" ]; then
		update-rc.d cyphesis-cpp defaults >/dev/null
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		invoke-rc.d cyphesis-cpp $_dh_action || exit 1
	fi
fi
# End automatically added section

