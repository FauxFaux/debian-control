#!/bin/sh

set -e

if [ "$1" = 'purge' ]; then
  rm -rf /etc/systemd/system/debci-worker.service.wants
fi

## Automatically added by dh_systemd_start/10.8
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.8
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask debci-worker.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge debci-worker.service >/dev/null
		deb-systemd-helper unmask debci-worker.service >/dev/null
	fi
fi
# End automatically added section
#
