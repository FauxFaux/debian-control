#!/bin/sh 

set -e

restore_plymouth_theme() {
	if which plymouth-set-default-theme > /dev/null ; then
	    plymouth-set-default-theme -r || true
	    update-initramfs -u -k all
	fi
}

unlink_login_background() {
	if [ -h /usr/share/images/desktop-base/login-background.svg ] ; then
		rm -f /usr/share/images/desktop-base/login-background.svg
	fi
}

if [ "$1" = remove ]; then
	restore_plymouth_theme
	unlink_login_background
	update-alternatives --auto desktop-login-background
fi

# Automatically added by dh_installdeb/10.9
dpkg-maintscript-helper rm_conffile /etc/gdm3/greeter.gsettings 0.0.39-1 -- "$@"
dpkg-maintscript-helper rm_conffile /etc/X11/Xsession.d/25debian-edu-artwork 0.902-1 -- "$@"
# End automatically added section

