#!/bin/sh
# postinst script for dicod
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
      chown dicod /var/lib/dicod
      dicodconfig -w

      # In case dictd got removed (but not purged), disable dictd service, 
      # since our dictd init script is just a symlink to dicod (Closes: 
      # #542020)
      update-rc.d -f dictd remove > /dev/null

      if which update-inetd > /dev/null ; then
	      update-inetd --group OTHER --add "dict stream tcp nowait dicod /usr/bin/dicod --inetd"
	      update-inetd --disable dict
      fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_systemd_enable/10.9.1
# This will only remove masks created by d-s-h on package removal.
deb-systemd-helper unmask 'dicod.service' >/dev/null || true

# was-enabled defaults to true, so new installations run enable.
if deb-systemd-helper --quiet was-enabled 'dicod.service'; then
	# Enables the unit on first installation, creates new
	# symlinks on upgrades if the unit file has changed.
	deb-systemd-helper enable 'dicod.service' >/dev/null || true
else
	# Update the statefile to add new symlinks (if any), which need to be
	# cleaned up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'dicod.service' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.9.1
# This will only remove masks created by d-s-h on package removal.
deb-systemd-helper unmask 'dicod.socket' >/dev/null || true

# was-enabled defaults to true, so new installations run enable.
if deb-systemd-helper --quiet was-enabled 'dicod.socket'; then
	# Enables the unit on first installation, creates new
	# symlinks on upgrades if the unit file has changed.
	deb-systemd-helper enable 'dicod.socket' >/dev/null || true
else
	# Update the statefile to add new symlinks (if any), which need to be
	# cleaned up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'dicod.socket' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit/10.9.1
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/dicod" ]; then
		update-rc.d dicod defaults >/dev/null
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		invoke-rc.d dicod $_dh_action || exit $?
	fi
fi
# End automatically added section


exit 0
