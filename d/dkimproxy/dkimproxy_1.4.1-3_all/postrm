#!/bin/sh

set -e

# If purging, then we should delete the folder containing our keys
if [ "$1" = "purge" ] ; then
	rm -rf /var/lib/dkimproxy
fi

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d dkimproxy remove >/dev/null
fi
# End automatically added section


exit 0
