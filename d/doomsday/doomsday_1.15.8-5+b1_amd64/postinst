#! /bin/sh
# postinst script for doomsday

set -e

case "$1" in
    configure|abort-upgrade)
    update-alternatives --install /usr/games/doom doom /usr/games/doomsday-compat 50 \
                        --slave /usr/share/man/man6/doom.6.gz \
                            doom.6.gz /usr/share/man/man6/doomsday.6.gz
    update-alternatives --install /usr/games/boom boom /usr/games/doomsday-compat 50 \
                        --slave /usr/share/man/man6/boom.6.gz \
                            boom.6.gz /usr/share/man/man6/doomsday.6.gz
    update-alternatives --install /usr/games/heretic heretic /usr/games/doomsday-compat 50 \
                        --slave /usr/share/man/man6/heretic.6.gz \
                            heretic.6.gz /usr/share/man/man6/doomsday.6.gz
    update-alternatives --install /usr/games/hexen hexen /usr/games/doomsday-compat 50 \
                        --slave /usr/share/man/man6/hexen.6.gz \
                            hexen.6.gz /usr/share/man/man6/doomsday.6.gz
    ;;

    abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# Automatically added by dh_installmenu/10.10.9
if [ "$1" = "configure" ] && [ -x "`which update-menus 2>/dev/null`" ]; then
	update-menus
fi
# End automatically added section


exit 0
