#!/bin/sh
#
# Author: Dario Minnucci <midget@debian.org>
# Date:   Fri, 29 Jun 2007 00:28:43 +0200
#         Delete 'mon' user on purge step.
#

set -e

#echo "----------------------------------------------"
#echo " debian/postrm: $1"
#echo "----------------------------------------------"

case "$1" in
    purge)
        # Remove 'mon' user
        echo -n "Removing user 'mon' ... "
		userdel mon
		echo "done."
    ;;
esac

# Automatically added by dh_installsystemd/10.10.9
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'mon.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'mon.service' >/dev/null
		deb-systemd-helper unmask 'mon.service' >/dev/null
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/10.10.9
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'mon.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'mon.service' >/dev/null
		deb-systemd-helper unmask 'mon.service' >/dev/null
	fi
fi
# End automatically added section


