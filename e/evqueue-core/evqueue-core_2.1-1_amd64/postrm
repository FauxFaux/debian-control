#!/bin/bash

set -e

if id -u evqueue >/dev/null 2>&1; then
        deluser --quiet evqueue
fi

if service --status-all | grep -Fq 'rsyslog'; then
	service rsyslog restart
fi

# Automatically added by dh_installinit/11.5.3
if [ "$1" = "purge" ] ; then
	update-rc.d evqueue remove >/dev/null
fi
# End automatically added section
# Automatically added by dh_installdebconf/11.5.3
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


# Force clean exit to prevent broken pacakge
exit 0
