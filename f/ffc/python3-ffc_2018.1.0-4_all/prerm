#!/bin/sh -e

UFC_INCLUDE_DIR=/usr/lib/python3/dist-packages/ffc/backends/ufc

# Remove alternatives links
if [ "$1" = "remove" ]; then
  update-alternatives --remove ufc.h ${UFC_INCLUDE_DIR}/ufc.h
fi


# Automatically added by dh_python3:
if which py3clean >/dev/null 2>&1; then
	py3clean -p python3-ffc 
else
	dpkg -L python3-ffc | perl -ne 's,/([^/]*)\.py$,/__pycache__/\1.*, or next; unlink $_ or die $! foreach glob($_)'
	find /usr/lib/python3/dist-packages/ -type d -name __pycache__ -empty -print0 | xargs --null --no-run-if-empty rmdir
fi

# End automatically added section

