#!/bin/sh

set -e

USER="filetea"
HOMEDIR="/usr/share/filetea"

case "$1" in
    configure)

        if ! id $USER > /dev/null 2>&1 ; then
            echo "Creating $USER user ..."
            adduser --system --disabled-password --disabled-login \
                    --home $HOMEDIR --no-create-home --group $USER
        fi

	install -d -oroot -gadm -m2750 /var/log/filetea

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# Automatically added by dh_systemd_enable
# This will only remove masks created by d-s-h on package removal.
deb-systemd-helper unmask filetea.service >/dev/null || true

# was-enabled defaults to true, so new installations run enable.
if deb-systemd-helper --quiet was-enabled filetea.service; then
	# Enables the unit on first installation, creates new
	# symlinks on upgrades if the unit file has changed.
	deb-systemd-helper enable filetea.service >/dev/null || true
else
	# Update the statefile to add new symlinks (if any), which need to be
	# cleaned up on purge. Also remove old symlinks.
	deb-systemd-helper update-state filetea.service >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/filetea" ]; then
		update-rc.d filetea defaults >/dev/null
		invoke-rc.d filetea start || exit $?
	fi
fi
# End automatically added section


if dpkg-maintscript-helper supports rm_conffile; then
   dpkg-maintscript-helper rm_conffile /etc/default/filetea 0.1.16-2~ -- "$@"
fi

exit 0
