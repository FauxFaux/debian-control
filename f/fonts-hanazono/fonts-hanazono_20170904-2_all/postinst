#! /bin/sh
set -e

# font alternatives
ALT_NAME="fonts-japanese-mincho"
FONT_ENTRY_A="/usr/share/fonts/truetype/hanazono/HanaMinA.ttf"
FONT_ENTRY_B="/usr/share/fonts/truetype/hanazono/HanaMinB.ttf"
FONT_PRIORITY=20

add_alternate_font_entry()
{
	update-alternatives --install \
	 /usr/share/fonts/truetype/$ALT_NAME.ttf \
	 $ALT_NAME.ttf \
	 $FONT_ENTRY_A \
	 $FONT_PRIORITY

	update-alternatives --install \
	 /usr/share/fonts/truetype/$ALT_NAME.ttf \
	 $ALT_NAME.ttf \
	 $FONT_ENTRY_B \
	 $FONT_PRIORITY
}

case "$1" in
    configure)
	add_alternate_font_entry

	;;

    abort-upgrade|abort-remove|abort-deconfigure)

	;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
