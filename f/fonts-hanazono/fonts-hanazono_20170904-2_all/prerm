#! /bin/sh
set -e

# font alternatives
ALT_NAME="fonts-japanese-mincho"
FONT_ENTRY_A="/usr/share/fonts/truetype/hanazono/HanaMinA.ttf"
FONT_ENTRY_B="/usr/share/fonts/truetype/hanazono/HanaMinB.ttf"

remove_alternate_font_entry()
{
    update-alternatives --remove $ALT_NAME.ttf $FONT_ENTRY_A
    update-alternatives --remove $ALT_NAME.ttf $FONT_ENTRY_B
}

case "$1" in
    upgrade|deconfigure)
    ;;
    remove)
        # alternative
	remove_alternate_font_entry
        ;;
    failed-upgrade)
        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
