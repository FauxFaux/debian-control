#!/bin/bash
# prerm script for fortunes-fr

set -e

case "$1" in
	remove|upgrade|deconfigure)
		FORTUNES_FILES=("bd" \
				"cinema" \
				"droit" \
				"haiku" \
				"humoristes" \
				"humour" \
				"informatique" \
				"litterature_francaise" \
				"litterature_etrangere" \
				"mysoginie" \
				"personnalites" \
				"philosophie" \
				"politique" \
				"proverbes" \
				"religion" \
				"sciences" \
				"gcu" \
				"GDP" \
				"gfa" \
				"glp" \
				"gpj" \
				"mauriceetpatapon" \
				"oulipo" \
				"multidesk" \
				"multidesk2" \
				"tribune-linuxfr" \
				"linuxfr-undernet" \
				"tolkien_fr" \
				"fr.rec.photo")

		i=0
		while [ -n "${FORTUNES_FILES[$i]}" ] ; do
			rm -f /usr/share/games/fortunes/fr/${FORTUNES_FILES[$i]}.dat
			i=$((i + 1))
		done
	;;
	failed-upgrade)
	;;
	*)
		echo "prerm called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
