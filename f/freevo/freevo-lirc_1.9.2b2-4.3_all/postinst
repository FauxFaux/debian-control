#!/bin/sh -e

action="$1"
LIRCRC=/etc/freevo/lircrc
LIRCD=/etc/lirc/lircd.conf

case "$1" in
    configure)
        if [ ! -f $LIRCRC ]; then 
            if [ -f $LIRCD ]; then
                echo 'You may need to call "/usr/bin/freevo makelircrc"'
            fi
        fi
    ;;
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


