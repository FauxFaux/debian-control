#!/bin/sh
set -e

case "$1" in
    remove)
        # Update grub
        if [ -e /boot/grub/grub.cfg ] && [ -x "$(which update-grub)" ]; then
            update-grub
        fi
    ;;
esac

# Automatically added by dh_installdeb/10.10.5
dpkg-maintscript-helper rm_conffile /etc/init/friendly-recovery.conf 0.2.36~ -- "$@"
# End automatically added section
# Automatically added by dh_systemd_start/10.10.5
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit/10.10.5
if [ "$1" = "purge" ] ; then
	update-rc.d friendly-recovery remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.10.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'friendly-recovery.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'friendly-recovery.service' >/dev/null
		deb-systemd-helper unmask 'friendly-recovery.service' >/dev/null
	fi
fi
# End automatically added section


exit 0
