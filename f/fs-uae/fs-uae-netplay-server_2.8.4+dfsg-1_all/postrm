#!/bin/sh

set -e

case "$1" in
    purge)
	# Delete cache and log directories for netplay-server
	# when purging the package
	rm -rf /var/log/fs-uae-netplay-server
	rm -rf /var/cache/fs-uae-netplay-server
	;;
esac

# Automatically added by dh_installinit/10.10.9
if [ "$1" = "purge" ] ; then
	update-rc.d fs-uae-netplay-server remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section


exit 0
