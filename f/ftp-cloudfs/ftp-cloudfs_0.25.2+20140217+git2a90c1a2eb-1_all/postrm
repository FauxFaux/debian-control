#!/bin/sh

set -e

if [ "$1" = "purge" ] ; then
	echo "Purging ftpcloudfs."
	[ -e /etc/ftpcloudfs.conf ] && rm -f /etc/ftpcloudfs.conf
	[ -e /var/run/ftp-cloudfs ] && rm -fr /var/run/ftp-cloudfs
	[ -e /var/log/ftp-cloudfs ] && rm -fr /var/log/ftp-cloudfs
	[ -e /etc/logrotate.d/ftpcloudfs ] && rm -f /etc/logrotate.d/ftpcloudfs
fi

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d ftp-cloudfs remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section


exit 0
