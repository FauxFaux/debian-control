#!/bin/sh

set -e

GROUP="gearman"
USER="gearman"
LOGDIR="/var/log/gearman-job-server"
chown $USER:$GROUP $LOGDIR

# Automatically added by dh_systemd_enable
# This will only remove masks created by d-s-h on package removal.
deb-systemd-helper unmask gearman-job-server.service >/dev/null || true

# was-enabled defaults to true, so new installations run enable.
if deb-systemd-helper --quiet was-enabled gearman-job-server.service; then
	# Enables the unit on first installation, creates new
	# symlinks on upgrades if the unit file has changed.
	deb-systemd-helper enable gearman-job-server.service >/dev/null || true
else
	# Update the statefile to add new symlinks (if any), which need to be
	# cleaned up on purge. Also remove old symlinks.
	deb-systemd-helper update-state gearman-job-server.service >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/gearman-job-server" ]; then
		update-rc.d gearman-job-server defaults >/dev/null
		invoke-rc.d gearman-job-server start || exit $?
	fi
fi
# End automatically added section

