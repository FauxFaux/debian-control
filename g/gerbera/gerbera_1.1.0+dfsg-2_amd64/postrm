#!/bin/sh
set -e

if [ "$1" = "purge" ] ; then
    rm -rf /var/lib/gerbera
    rm -rf /var/log/gerbera.log* /var/run/gerbera.pid
    dpkg-statoverride --remove /etc/gerbera/config.xml
    dpkg-statoverride --remove /var/lib/gerbera
    deluser --system gerbera || true
    delgroup --system gerbera || true
fi

# Automatically added by dh_installinit/10.10.9
if [ "$1" = "purge" ] ; then
	update-rc.d gerbera remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.10.9
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'gerbera.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'gerbera.service' >/dev/null
		deb-systemd-helper unmask 'gerbera.service' >/dev/null
	fi
fi
# End automatically added section

