#!/bin/sh

set -e

case "${1}" in
    configure)
        if ! getent passwd _gfarmfs > /dev/null 2>&1; then
            adduser --quiet --system --force-badname --group --disabled-login --no-create-home --home /var/lib/gfarmfs _gfarmfs
        fi
        chown _gfarmfs:_gfarmfs /var/lib/gfarmfs
    ;;
esac

# Automatically added by dh_systemd_enable
if deb-systemd-helper debian-installed gfmd.service; then
	# This will only remove masks created by d-s-h on package removal.
	deb-systemd-helper unmask gfmd.service >/dev/null || true

	if deb-systemd-helper --quiet was-enabled gfmd.service; then
		# Create new symlinks, if any.
		deb-systemd-helper enable gfmd.service >/dev/null || true
	fi
fi

# Update the statefile to add new symlinks (if any), which need to be cleaned
# up on purge. Also remove old symlinks.
deb-systemd-helper update-state gfmd.service >/dev/null || true
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/gfmd" ]; then
		update-rc.d gfmd defaults >/dev/null || exit $?
	fi
fi
# End automatically added section

