#!/bin/sh

set -e

if [ "${1}" = "purge" ] ; then
	[ -e /var/lib/glance ] && rm -rf /var/lib/glance
	[ -e /var/log/glance ] && rm -rf /var/log/glance
	for i in glance-api.conf glance-registry.conf glance-cache.conf \
			glance-manage.conf glance-scrubber.conf glance-api-paste.ini \
			glance-registry-paste.ini policy.json schema-image.json \
			property-protections-policies.conf property-protections-roles.conf \
			ovf-metadata.json rootwrap.conf glance-swift.conf ; do
		if [ -e "/etc/glance/${i}" ] ; then
			rm /etc/glance/${i}
		fi
	done
	rmdir --ignore-fail-on-non-empty /etc/glance || true
fi

# Automatically added by dh_installdebconf/10.10.9
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section

