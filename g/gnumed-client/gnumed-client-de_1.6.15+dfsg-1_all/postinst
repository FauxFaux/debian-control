#!/bin/sh
set -e

PROG=gnumed
GROUP=${PROG}

KVKDIR=/var/spool/kvkd/

TESTGROUP=`getent group ${GROUP}` || true
if [ -z "${TESTGROUP}" ] ; then
        addgroup --system "${GROUP}" >/dev/null
fi

if [ ! -d "$KVKDIR" ] ; then
    mkdir -p "$KVKDIR"
    chgrp $GROUP "$KVKDIR"
    chmod 2774 "$KVKDIR"
fi


