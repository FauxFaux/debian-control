#!/bin/sh

set -e

if [ "$1" = "purge" ] ; then
    if getent passwd goiardi >/dev/null; then
        if which deluser >/dev/null 2>&1; then
            deluser --quiet --system goiardi || echo "Could not remove goiardi user."
        fi
    fi

    # Get rid of cruft
    rm -rf /var/lib/goiardi
    rm -rf /var/log/goiardi
    rm -f /etc/goiardi/admin.pem \
          /etc/goiardi/chef-validator.pem \
          /etc/goiardi/chef-webui.pem
fi

# Automatically added by dh_installinit/11.3.5
if [ "$1" = "purge" ] ; then
	update-rc.d goiardi remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.3.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'goiardi.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'goiardi.service' >/dev/null || true
		deb-systemd-helper unmask 'goiardi.service' >/dev/null || true
	fi
fi
# End automatically added section

