#!/bin/sh

set -e

# Remove vestigial alternative
update-alternatives --remove guile /usr/bin/guile-2.0

update-alternatives \
    --install \
    /usr/bin/guile \
    guile \
    /usr/lib/x86_64-linux-gnu/guile-2.0/bin/guile \
    2011 \
    --slave /usr/share/man/man1/guile.1.gz guile.1.gz \
    /usr/share/man/man1/guile-2.0.1.gz

# Automatically added by dh_installmenu/11.2.1
if [ "$1" = "configure" ] && [ -x "`which update-menus 2>/dev/null`" ]; then
	update-menus
fi
# End automatically added section

