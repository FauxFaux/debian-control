#!/bin/sh

# currently comment out because otherwise it freezes
#. /usr/share/debconf/confmodule

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# $2 = version of the package being upgraded.
install() {

    HOMER_GROUP=homer
    if ! getent group "$HOMER_GROUP" >/dev/null; then
        addgroup --system "$HOMER_GROUP" || exit 1
    fi

    HOMER_HOME=/usr/share/homer
    HOMER_USER=homer
    if ! getent passwd "$HOMER_USER" >/dev/null; then
        adduser --system \
           --home "${HOMER_HOME}" \
           --shell /bin/false \
           --no-create-home \
           --ingroup "$HOMER_GROUP" \
           --disabled-password \
           --disabled-login \
           --gecos "HOMER SIP Capture API" \
               "$HOMER_USER" || exit 1
    fi

    KAMAILIO_GROUP=kamailio-homer
    if ! getent group "$KAMAILIO_GROUP" >/dev/null; then
        addgroup --system "$KAMAILIO_GROUP" || exit 1
    fi

    KAMAILIO_HOME=/usr/share/homer
    KAMAILIO_USER=kamailio-homer
    if ! getent passwd "$KAMAILIO_USER" >/dev/null; then
        adduser --system \
           --home "${KAMAILIO_HOME}" \
           --shell /bin/false \
           --no-create-home \
           --ingroup "$KAMAILIO_GROUP" \
           --disabled-password \
           --disabled-login \
           --gecos "HOMER SIP Capture Server" \
               "$KAMAILIO_USER" || exit 1
    fi

    chown root:${HOMER_GROUP} /etc/homer/rotation.ini
    chown root:${KAMAILIO_GROUP} /etc/homer/kamailio-homer.cfg

    # We install a config under /etc/rsyslog.d so must restart rsyslog
    invoke-rc.d rsyslog restart >/dev/null 2>&1 || true

    if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
        . /usr/share/apache2/apache2-maintscript-helper
        apache2_invoke enmod rewrite || exit $?
        apache2_invoke enconf homer-api || exit $?
    fi
}

case "$1" in
    configure)
        install "$@"
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/kamailio-homer" ]; then
		update-rc.d kamailio-homer defaults >/dev/null || exit $?
	fi
fi
# End automatically added section
# Automatically added by dh_apache2
if true; then
	if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
		. /usr/share/apache2/apache2-maintscript-helper
		for conf in homer-api  ; do
			apache2_invoke enconf $conf  || exit $?
		done
	fi
fi
# End automatically added section


exit 0
