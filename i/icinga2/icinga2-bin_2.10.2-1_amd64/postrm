#!/bin/sh
# postrm script for icinga2-bin

set -e

case "$1" in
    purge)
        for f in /etc/icinga2/features-enabled/*; do
            [ -L "$f" ] && rm -f "$f"
        done
    ;;
    
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.5.3
if [ "$1" = "purge" ] ; then
	update-rc.d icinga2 remove >/dev/null
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.5.3
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'icinga2.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'icinga2.service' >/dev/null || true
		deb-systemd-helper unmask 'icinga2.service' >/dev/null || true
	fi
fi
# End automatically added section


exit 0


