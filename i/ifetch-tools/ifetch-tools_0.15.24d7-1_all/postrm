#!/bin/sh

set -e

case "${1}" in
	remove)
		deluser --quiet --system ifetch-tools
		delgroup --quiet --system --only-if-empty ifetch-tools || true
		;;

	purge)
		if [ -e /usr/share/debconf/confmodule ]
		then
			. /usr/share/debconf/confmodule

			db_input high ifetch-tools/purge || true
			db_go || true
			db_get ifetch-tools/purge || true

			PURGE="${RET}"
		fi

		if [ "${PURGE}" != "false" ]
		then
			rm -rf /etc/ifetch-tools
			rm -rf /var/lib/ifetch-tools
			rm -rf /var/log/ifetch-tools
		fi

		rm -rf /var/run/ifetch-tools*
		;;

	upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)

		;;

	*)
		echo "postrm called with unknown argument \`${1}'" >&2
		exit 1
		;;
esac

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d ifetch-tools remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installdebconf
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


exit 0
