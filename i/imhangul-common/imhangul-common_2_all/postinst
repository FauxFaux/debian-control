#!/bin/sh

set -e

PRIORITY=49

case "$1" in
    configure)
        update-alternatives --install \
            /etc/X11/xinit/xinput.d/ko_KR xinput-ko_KR \
            /etc/X11/xinit/xinput.d/imhangul $PRIORITY
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac



exit 0
