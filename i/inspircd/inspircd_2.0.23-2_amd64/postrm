#! /bin/sh

set -e

case "$1" in
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade)
       ;;
    purge|disappear)
       rm -rf /var/log/inspircd.log* /var/run/inspircd.pid
       ;;
    *)
       echo "postrm called with unknown argument \`$1'" >&2
       exit 1
esac

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d inspircd remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask inspircd.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge inspircd.service >/dev/null
		deb-systemd-helper unmask inspircd.service >/dev/null
	fi
fi
# End automatically added section
# Automatically added by dh_apparmor
if [ "$1" = "purge" ] && ! [ -e "/etc/apparmor.d/usr.sbin.inspircd" ] ; then
    rm -f "/etc/apparmor.d/disable/usr.sbin.inspircd" || true
    rm -f "/etc/apparmor.d/force-complain/usr.sbin.inspircd" || true
    rm -f "/etc/apparmor.d/local/usr.sbin.inspircd" || true
    rmdir /etc/apparmor.d/disable 2>/dev/null || true
    rmdir /etc/apparmor.d/local   2>/dev/null || true
    rmdir /etc/apparmor.d         2>/dev/null || true
fi
# End automatically added section


exit 0
