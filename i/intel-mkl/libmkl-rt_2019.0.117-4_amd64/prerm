#!/bin/sh
set -e

# source debconf library
. /usr/share/debconf/confmodule

if [ "$1" != "upgrade" ]; then

    update-alternatives --remove libblas.so.3-x86_64-linux-gnu \
                        /usr/lib/x86_64-linux-gnu/libmkl_rt.so

    update-alternatives --remove liblapack.so.3-x86_64-linux-gnu \
                        /usr/lib/x86_64-linux-gnu/libmkl_rt.so

    if [ "amd64" = "amd64" ]; then

    update-alternatives --remove libblas64.so.3-x86_64-linux-gnu \
                        /usr/lib/x86_64-linux-gnu/libmkl_rt.so

    update-alternatives --remove liblapack64.so.3-x86_64-linux-gnu \
                        /usr/lib/x86_64-linux-gnu/libmkl_rt.so

    fi

fi



exit 0
