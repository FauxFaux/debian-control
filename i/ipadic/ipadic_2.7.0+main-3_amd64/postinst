#!/bin/sh
# postinst script for ipadic
#
# see: dh_installdeb(1)

set -e

priority="50"

chasendir="/usr/share/chasen"
chasenrc="${chasendir}/ipadic.rc"
dictdir="${chasendir}/dic/ipadic"
srcdir=${dictdir}
destdir="/var/lib/chasen/dic/ipadic"

case "$1" in
    configure)
    update-alternatives \
     --install /etc/chasenrc chasenrc ${chasenrc} ${priority} \
     --slave /var/lib/chasen/dic/debian chasen-dictionary ${destdir} 

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0


