#!/bin/sh

set -e

if [ "${1}" = "purge" ] ; then
	rm -f /etc/ironic-inspector/inspector.conf
	rmdir --ignore-fail-on-non-empty /etc/ironic-inspector || true
	rm -rf /var/lib/ironic-inspector
	rm -rf /var/log/ironic-inspector
fi

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d ironic-inspector remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask ironic-inspector.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge ironic-inspector.service >/dev/null
		deb-systemd-helper unmask ironic-inspector.service >/dev/null
	fi
fi
# End automatically added section


exit 0
