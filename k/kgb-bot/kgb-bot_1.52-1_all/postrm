#!/bin/sh

set -e
set -u

LOG=/var/log/kgb-bot.log

if [ "$1" = "purge" ] ; then
	rm -f $LOG*
fi

# Automatically added by dh_installinit/11.3.5
if [ "$1" = "purge" ] ; then
	update-rc.d kgb-bot remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.3.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'kgb-bot.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'kgb-bot.service' >/dev/null || true
		deb-systemd-helper unmask 'kgb-bot.service' >/dev/null || true
	fi
fi
# End automatically added section

