#!/bin/sh
set -e

if [ "$1" = "upgrade" -a -n "$2" ] && \
	dpkg --compare-versions "$2" le "1.1.0-2~"; then

	if [ -d /run/systemd/system ]; then
		deb-systemd-invoke stop knot-resolver.service knot-resolver.socket knot-resolver-control.socket >/dev/null || true
		deb-systemd-helper purge knot-resolver.service >/dev/null || true
	fi

	if [ -x /etc/init.d/knot-resolver ]; then
		invoke-rc.d knot-resolver stop || true
	fi

	update-rc.d knot-resolver remove >/dev/null || true
fi

# Automatically added by dh_installdeb/10.10.9
dpkg-maintscript-helper rm_conffile /etc/default/knot-resolver 1.1.0-3\~ knot-resolver -- "$@"
dpkg-maintscript-helper rm_conffile /etc/init.d/knot-resolver 1.1.0-3\~ knot-resolver -- "$@"
# End automatically added section


exit 0
