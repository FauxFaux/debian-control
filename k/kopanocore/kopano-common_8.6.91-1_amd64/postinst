#! /bin/sh

set -e

LOGDIR=/var/log/kopano

logs() {
    chown kopano:adm ${LOGDIR}
    chmod 750 ${LOGDIR}
}

add_users_groups()
{
    if ! getent group kopano >/dev/null; then
        addgroup --system kopano
    fi

    if ! getent passwd kopano >/dev/null; then
        adduser --quiet \
                --system \
                --ingroup kopano \
                --quiet \
                --disabled-login \
                --disabled-password \
                --home /var/lib/kopano \
                --no-create-home \
                --gecos "Kopano" \
                kopano
    fi
}

case "$1" in
    configure)
        add_users_groups
        logs
        if ! dpkg-statoverride --list /etc/kopano/debian-db.cfg >/dev/null; then
            dpkg-statoverride --add --update root kopano 0640 /etc/kopano/debian-db.cfg
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installsystemd/11.5.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	# In case this system is running systemd, we need to ensure that all
	# necessary tmpfiles (if any) are created before starting.
	if [ -d /run/systemd/system ] ; then
		systemd-tmpfiles --create kopano-tmpfiles.conf >/dev/null || true
	fi
fi
# End automatically added section


exit 0
