#! /bin/sh

set -e

LAZARUS_DIR=/usr/lib/lazarus/1.8.4

# Add alternatives
update-alternatives \
	--install /usr/bin/lazarus-ide lazarus-ide ${LAZARUS_DIR}/startlazarus 1080400 \
    --slave /usr/bin/startlazarus startlazarus ${LAZARUS_DIR}/startlazarus \
	--slave /usr/share/pixmaps/lazarus.xpm lazarus.xpm /usr/share/pixmaps/lazarus-1.8.4.xpm

# Debhelper code
# Automatically added by dh_installmenu/11.4
if [ "$1" = "configure" ] && [ -x "`which update-menus 2>/dev/null`" ]; then
	update-menus
fi
# End automatically added section

