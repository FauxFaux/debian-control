#!/bin/sh

set -e

if [ "$1" = purge ]; then
    deluser --quiet --system lbcd > /dev/null || true
fi

# Automatically added by dh_installsystemd/11
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'lbcd.service' 'lbcd.socket' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'lbcd.service' 'lbcd.socket' >/dev/null
		deb-systemd-helper unmask 'lbcd.service' 'lbcd.socket' >/dev/null
	fi
fi
# End automatically added section
# Automatically added by dh_installinit/11
if [ "$1" = "purge" ] ; then
	update-rc.d lbcd remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section

