#!/bin/sh
set -e

if [ -x "/etc/init.d/dpmcopyd" ]; then
	if [ -x "`which invoke-rc.d 2>/dev/null`" ]; then
		invoke-rc.d dpmcopyd stop || exit $?
	else
		/etc/init.d/dpmcopyd stop || exit $?
	fi
fi

if [ "$1" = "remove" ] ; then
	update-alternatives --remove dpmcopyd /usr/lib/dpm-postgres/dpmcopyd
fi


