#!/bin/sh
set -e

if [ "$1" = "purge" ] ; then
	update-alternatives --display dpm-srmv1 > /dev/null || \
		update-rc.d dpm-srmv1 remove > /dev/null
	update-alternatives --display dpm-srmv2 > /dev/null || \
		update-rc.d dpm-srmv2 remove > /dev/null
	update-alternatives --display dpm-srmv2.2 > /dev/null || \
		update-rc.d dpm-srmv2.2 remove > /dev/null
fi

# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi


