#!/bin/sh
# postinst script for levee
set -e

case "$1" in
    configure)
        update-alternatives \
                --install /usr/bin/vi vi /usr/bin/levee 10 \
                --slave /usr/share/man/man1/vi.1.gz vi.1.gz \
                /usr/share/man/man1/levee.1.gz
        update-alternatives \
                --install /usr/bin/editor editor /usr/bin/levee 5 \
                --slave /usr/share/man/man1/editor.1.gz editor.1.gz \
                /usr/share/man/man1/levee.1.gz
	;;

    abort-upgrade|abort-remove|abort-deconfigure)
        update-alternatives --remove editor /usr/bin/levee
        update-alternatives --remove vi /usr/bin/levee
	;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
	;;
esac

# Automatically added by dh_installmenu
if [ "$1" = "configure" ] && [ -x "`which update-menus 2>/dev/null`" ]; then
	update-menus
fi
# End automatically added section


exit 0
