#!/bin/sh

set -e

if test "$1" = 'purge'; then
    for f in lircd.conf lircmd.conf irexec.lircrc lirc_options.conf; do
	rm -f /etc/lirc/$f;
    done || :
    find /etc/lirc -type d -empty -delete || :
fi


# Automatically added by dh_systemd_start
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d lircmd remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d lircd remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask irexec.service lircd-setup.service lircd-uinput.service lircd.service lircd.socket lircmd.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge irexec.service lircd-setup.service lircd-uinput.service lircd.service lircd.socket lircmd.service >/dev/null
		deb-systemd-helper unmask irexec.service lircd-setup.service lircd-uinput.service lircd.service lircd.socket lircmd.service >/dev/null
	fi
fi
# End automatically added section


