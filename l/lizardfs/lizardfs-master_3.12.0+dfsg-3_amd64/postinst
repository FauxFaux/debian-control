#!/bin/sh
set -e
# Automatically added by dh_installinit/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/lizardfs-master" ]; then
		update-rc.d lizardfs-master defaults >/dev/null || exit 1
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if deb-systemd-helper debian-installed 'lizardfs-master.service'; then
		# This will only remove masks created by d-s-h on package removal.
		deb-systemd-helper unmask 'lizardfs-master.service' >/dev/null || true

		if deb-systemd-helper --quiet was-enabled 'lizardfs-master.service'; then
			# Create new symlinks, if any.
			deb-systemd-helper enable 'lizardfs-master.service' >/dev/null || true
		fi
	fi

	# Update the statefile to add new symlinks (if any), which need to be cleaned
	# up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'lizardfs-master.service' >/dev/null || true
fi
# End automatically added section
