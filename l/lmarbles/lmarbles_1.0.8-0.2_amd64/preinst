#!/bin/sh

set -e

case "$1" in
    upgrade)
        if dpkg --compare-versions "$2" lt "1.0.8-0.1~"; then
            if [ -f "/var/games/lmarbles/lmarbles.prfs" ]; then
                mv /var/games/lmarbles/lmarbles.prfs /var/games/lmarbles/lmarbles.prfs.bak
            fi
        fi
    ;;
    install|abort-upgrade)
    ;;
    *)
     echo "preinst called with unknown argument '$1'" >&2
     exit 1
    ;;
esac


