#!/bin/sh
set -e

case "$1" in
    purge)
        if which delgroup; then
            delgroup --quiet tracing > /dev/null || true
        fi
    ;;
esac

if dpkg-maintscript-helper supports rm_conffile ; then
    dpkg-maintscript-helper rm_conffile \
        /etc/bash_completion.d/lttng 2.8.2-1~ lttng-tools -- "$@"
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/10.9.2
if [ "$1" = "purge" ] ; then
	update-rc.d lttng-sessiond remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.9.2
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'lttng-sessiond.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'lttng-sessiond.service' >/dev/null
		deb-systemd-helper unmask 'lttng-sessiond.service' >/dev/null
	fi
fi
# End automatically added section


exit 0
