#!/bin/sh

set -e

case "$1" in
    remove)
        vgcfgbackup >/dev/null 2>&1 || :
    ;;
esac

# Automatically added by dh_installsystemd/10.10.9
if [ -d /run/systemd/system ] && [ "$1" = remove ]; then
	deb-systemd-invoke stop 'blk-availability.service' 'lvm2-monitor.service' >/dev/null
fi
# End automatically added section
# Automatically added by dh_installinit/10.10.9
if [ -x "/etc/init.d/lvm2-lvmpolld" ] && [ "$1" = remove ]; then
	invoke-rc.d lvm2-lvmpolld stop || exit $?
fi
# End automatically added section
# Automatically added by dh_installinit/10.10.9
if [ -x "/etc/init.d/lvm2-lvmetad" ] && [ "$1" = remove ]; then
	invoke-rc.d lvm2-lvmetad stop || exit $?
fi
# End automatically added section


exit 0
