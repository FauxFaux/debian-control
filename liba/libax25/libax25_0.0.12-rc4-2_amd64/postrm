# /usr/share/common-licenses/GPL or <http://www.gnu.org/copyleft/gpl.txt>.
# 
#

set -e



if [ "$1" = "remove" ]; then
      ldconfig 
fi

if [ "$1" = "purge" ]; then
   if [ -d /etc/ax25 ]; then
      rm -r /etc/ax25
   fi
fi


exit 0
