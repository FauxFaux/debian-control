#!/bin/sh
set -e



# This code was taken from nss-mdns:

log() {
    echo "$*"
}

# try to insert "unknown" entry to the "passwd" and "group" line in /etc/nsswitch.conf to
# automatically enable libnss-unknown support; do not change the
# configuration if the "passwd" or "group" line already references some libnss "unknown" lookups
insert_nss_entry() {
    log "Checking NSS setup..."
    # abort if /etc/nsswitch.conf does not exist
    if ! [ -e /etc/nsswitch.conf ]; then
        log "Could not find /etc/nsswitch.conf."
        return
    fi
    perl -i -pe '
        sub insert {
            # this also splits on tab
            my @bits = split(" ", shift);
            # do not break configuration if the "passwd" line already references
            # "unknown"
            if (grep { $_ eq "unknown" } @bits) {
                return join " ", @bits;
            }
            # change "compat" into "compat unknown"
            return join " ", map {
                $_ eq "compat" ? ("$_", "unknown") : $_
            } @bits;
        }
        s/^(passwd:\s+)(.*)/$1.insert($2)/e; s/^(group:\s+)(.*)/$1.insert($2)/e;
    ' /etc/nsswitch.conf
}

update_nss_entry() {
    log "Checking NSS setup..."
    # abort if /etc/nsswitch.conf does not exist
    if ! [ -e /etc/nsswitch.conf ]; then
        log "Could not find /etc/nsswitch.conf."
        return
    fi

    # check for the "unknown" entry in passwd and group entries
    (grep '^passwd:\|^group:' /etc/nsswitch.conf  | grep "unknown") && \
	(log "libnss-unknown entry already present in /etc/nsswitch.conf"; return) || \
	log "Updating /etc/nsswitch.conf"

    perl -i -pe '
        sub insert {
            # this also splits on tab
            my @bits = split(" ", shift);
            # do not break configuration if the "passwd" line already references
            # "unknown"
            if (grep { $_ eq "unknown" } @bits) {
                return join " ", @bits;
            }
            # change "compat" into "compat unknown"
            return join " ", map {
                $_ eq "compat" ? ("$_", "unknown") : $_
            } @bits;
        }
        s/^(passwd:\s+)(.*)/$1.insert($2)/e; s/^(group:\s+)(.*)/$1.insert($2)/e;
    ' /etc/nsswitch.conf
}

action="$1"

if [ configure = "$action" ]; then
    if [ -z "$2" ]; then
        log "First installation detected..."
        # first install: setup the recommended configuration (unless
        # nsswitch.conf already contains "unknown" entries)
        insert_nss_entry
    else
        # upgrade
        version="$2"
	update_nss_entry
    fi
fi
