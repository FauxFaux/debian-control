#! /bin/sh

set -e

update-alternatives --install /usr/lib/x86_64-linux-gnu/libpsm_infinipath.so.1 \
	libpsm_infinipath.so.1 \
    /usr/lib/libpsm2-2/libpsm_infinipath.so.1 50

# trigger hfi1 devices to create /dev/ipath
if [ ! -e /dev/ipath ] ; then
	for DEV in /dev/hfi1_[0-9]; do
		if [ -c $DEV ] ; then
			udevadm trigger $DEV || true
		fi
	done
fi



exit 0
