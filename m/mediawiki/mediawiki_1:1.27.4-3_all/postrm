#! /bin/sh
# postrm script for mediawiki
#
# see: dh_installdeb(1)

set -e

case "$1" in
    purge)
	rm -rf /etc/mediawiki /var/lib/mediawiki
    ;;
    *)
    ;;
esac

# Automatically added by dh_installdeb/10.10.9
dpkg-maintscript-helper rm_conffile /etc/php5/mods-available/mediawiki.ini 1:1.27.0-1 -- "$@"
# End automatically added section
# Automatically added by dh_systemd_start/10.10.9
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.10.9
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'mediawiki-jobrunner.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'mediawiki-jobrunner.service' >/dev/null
		deb-systemd-helper unmask 'mediawiki-jobrunner.service' >/dev/null
	fi
fi
# End automatically added section
# Automatically added by dh_apache2/UNDECLARED
if [ "$1" = "purge" ] ; then
	if true; then
		if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
			. /usr/share/apache2/apache2-maintscript-helper

			for conf in mediawiki  ; do
				apache2_invoke disconf $conf  || exit $?
			done
		fi
	fi
fi
# End automatically added section


exit 0
