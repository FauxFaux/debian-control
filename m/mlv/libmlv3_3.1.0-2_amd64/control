Depends: libc6 (>= 2.14), libglib2.0-0 (>= 2.35.9), libsdl-gfx1.2-5 (>= 2.0.25), libsdl-image1.2 (>= 1.2.10), libsdl-mixer1.2, libsdl-ttf2.0-0, libsdl1.2debian (>= 1.2.11), libxml2 (>= 2.7.4), fonts-dejavu-core
