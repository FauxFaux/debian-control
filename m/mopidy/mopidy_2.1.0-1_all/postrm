#!/bin/sh
# postrm script for mopidy

set -e

if [ "$1" = "purge" ]; then
    rm -f /var/lib/mopidy/tag_cache
    rm -f /var/log/mopidy/mopidy.log
    rm -f /var/log/mopidy/mopidy-debug.log
fi

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d mopidy remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask mopidy.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge mopidy.service >/dev/null
		deb-systemd-helper unmask mopidy.service >/dev/null
	fi
fi
# End automatically added section
# Automatically added by dh_installdebconf
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


exit 0
