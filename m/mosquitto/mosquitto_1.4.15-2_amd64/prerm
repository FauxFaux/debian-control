#!/bin/sh
# prerm script for mosquitto
#
# see: dh_installdeb(1)

set -e

case "$1" in
	remove|purge|deconfigure)
		invoke-rc.d mosquitto stop
	;;

	upgrade)
	;;
	failed-upgrade)
	;;

	*)
		echo "prerm called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# Automatically added by dh_installinit/11.2.1
if [ -x "/etc/init.d/mosquitto" ] && [ "$1" = remove ]; then
	invoke-rc.d mosquitto stop || exit 1
fi
# End automatically added section


exit 0
