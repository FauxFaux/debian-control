#!/bin/sh

set -e

case "$1" in
  purge)
    userdel rdnssd 2>&1 >/dev/null || true
    rm -f -- /var/run/rdnssd/resolv.conf 2>/dev/null
    rmdir -- /var/run/rdnssd/ || true
  ;;
esac

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d rdnssd remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask rdnssd.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge rdnssd.service >/dev/null
		deb-systemd-helper unmask rdnssd.service >/dev/null
	fi
fi
# End automatically added section


