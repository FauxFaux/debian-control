#!/bin/sh

set -e

case "$1" in
        purge)
                if getent passwd|grep -q ^needrestart-dbus: ; then
                        userdel needrestart-dbus > /dev/null 2>&1 || true
                fi
        ;;
        upgrade|remove|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
        *)
                echo "postrm called with unknown argument \`$1'" >&2
                exit 1
esac



exit 0
