#!/bin/sh

SNMP_USER="Debian-snmp"
SNMP_GROUP="$SNMP_USER"

set -e

case "$1" in
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;
    purge)
         # if "snmp" is system user, it means Debian package created it.
         deluser --quiet --system snmp || true
         delgroup --quiet --system snmp || true

         # after 5.7.3+dfsg-2, Debian-snmp is used
         deluser --quiet --system $SNMP_USER || true
         delgroup --quiet --system $SNMP_GROUP || true

         rm -rf /var/lib/snmp/snmpd.conf* \
                /var/run/agentx /var/agentx/master \
                /var/run/snmpd.pid
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.5.4
if [ "$1" = "purge" ] ; then
	update-rc.d snmpd remove >/dev/null
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.5.4
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'snmpd.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'snmpd.service' >/dev/null || true
		deb-systemd-helper unmask 'snmpd.service' >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_installdebconf/11.5.4
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


exit 0
