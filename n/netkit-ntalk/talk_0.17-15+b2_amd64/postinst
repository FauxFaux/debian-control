#!/bin/sh
set -e

if
	[ "$1" != configure ] || [ -z "$2" ] ||
	dpkg --compare-versions "$2" lt 0.16-1
then
	update-alternatives --install /usr/bin/talk talk \
				      /usr/bin/netkit-ntalk 100 \
			    --slave /usr/share/man/man1/talk.1.gz talk.1.gz \
				    /usr/share/man/man1/netkit-ntalk.1.gz
fi


