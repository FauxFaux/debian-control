#!/bin/sh

set -e

case "$1" in
	configure)
		if [ -x "/etc/init.d/dbus" ]; then
			if [ -x /usr/sbin/invoke-rc.d ]; then
				invoke-rc.d dbus force-reload || true
			else
				/etc/init.d/dbus force-reload || true
			fi
		fi

		if ! getent passwd nm-iodine >/dev/null; then
			adduser --quiet \
				--system \
				--quiet \
				--disabled-login \
				--disabled-password \
				--home /var/run/iodine \
				--no-create-home \
				--gecos "Network Manager iodine" \
				nm-iodine
		fi
        ;;
esac



exit 0
