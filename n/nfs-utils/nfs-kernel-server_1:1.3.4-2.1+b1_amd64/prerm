#!/bin/sh

set -e

# Automatically added by dh_systemd_start/10.7.2
if [ -d /run/systemd/system ] && [ "$1" = remove ]; then
	deb-systemd-invoke stop nfs-server.service >/dev/null
fi
# End automatically added section


case "$1" in
    remove|purge)
	[ -x /etc/init.d/nfs-kernel-server ] &&
	    invoke-rc.d nfs-kernel-server stop
	;;
esac

if [ "$1" != upgrade ]
then
    rm -f /var/lib/nfs/etab   \
          /var/lib/nfs/rmtab  \
          /var/lib/nfs/xtab
fi

exit 0
