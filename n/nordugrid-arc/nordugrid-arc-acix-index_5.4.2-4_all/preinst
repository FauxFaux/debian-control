#!/bin/sh

set -e

# Version 5.4.2-2 starts using defaults-disabled
# Remove rc.d links if upgrading from an older version and the service is
# disabled in /etc/default

if [ -n "$2" ] ; then
	if dpkg --compare-versions "$2" "<<" "5.4.2-2" ; then
		[ -r /etc/default/acix-index ] && . /etc/default/acix-index
		if [ -n "${RUN}" ] && [ "${RUN}" != "yes" ] ; then
			update-rc.d -f acix-index remove >/dev/null
		fi
	fi
fi



dpkg-maintscript-helper rm_conffile /etc/default/acix-index 5.4.2-2 -- "$@"
