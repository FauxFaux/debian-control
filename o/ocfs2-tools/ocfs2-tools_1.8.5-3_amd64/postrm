#!/bin/sh

set -e

if [ "$1" = "purge" ] && [ -e "/etc/default/o2cb" ]; then
        rm -f /etc/default/o2cb
fi

# Automatically added by dh_installinit/10.9
if [ "$1" = "purge" ] ; then
	update-rc.d ocfs2 remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit/10.9
if [ "$1" = "purge" ] ; then
	update-rc.d o2cb remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installdebconf/10.9
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section

