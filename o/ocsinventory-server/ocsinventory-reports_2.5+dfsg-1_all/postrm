#!/bin/sh
# postrm script for ocsinventory-reports
#

set -e

varpath="/var/lib/ocsinventory-reports"
logpath="/var/log/ocsinventory-reports"
dbconfpath="/etc/ocsinventory/dbconfig.inc.php"

if [ "$1" = purge ] ; then
	rm -rf $varpath
	rm -rf $logpath
	rm -f $dbconfpath
	rm -f $dbconfpath.old # from version 2.0.5-1.1
	#rmdir --ignore-fail-on-non-empty /etc/ocsinventory/
fi

# Automatically added by dh_apache2/UNDECLARED
if [ "$1" = "purge" ] ; then
	if true; then
		if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
			. /usr/share/apache2/apache2-maintscript-helper

			for conf in ocsinventory-reports  ; do
				apache2_invoke disconf $conf  || exit 1
			done
		fi
	fi
fi
# End automatically added section


exit 0
