#!/bin/sh

set -e

# remove other ident daemons from inetd
if which update-inetd > /dev/null; then
	update-inetd --remove ident
fi

adduser --system --group --home / --no-create-home --quiet oident

# Automatically added by dh_installinit/11.3.2
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/oidentd" ]; then
		update-rc.d oidentd defaults >/dev/null
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		invoke-rc.d oidentd $_dh_action || exit 1
	fi
fi
# End automatically added section

