#! /bin/sh
# postrm script for omniorb-nameserver

set -e

LIBDIR=/var/lib/omniorb/
LOGFILE=/var/log/omniorb-nameserver.log

case "$1" in
    purge)
        rm -rf $LIBDIR  || true
        rm -f $LOGFILE || true
        ;;
    abort-install|remove|upgrade|abort-upgrade|failed-upgrade|disappear)
        true
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.3.2
if [ "$1" = "purge" ] ; then
	update-rc.d omniorb4-nameserver remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section


exit 0
