#!/bin/sh

set -e

case $1 in
   configure)
      if ! getent passwd onioncat >/dev/null ; then
         echo "adding onioncat user..."
         adduser --home  '/var/lib/onioncat' \
            --quiet --system --group \
	    --shell '/bin/sh' \
	    --gecos 'OnionCat user,,,' \
	    onioncat
      fi
esac

# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/onioncat" ]; then
		update-rc.d onioncat defaults >/dev/null
		invoke-rc.d onioncat start || exit $?
	fi
fi
# End automatically added section


exit 0

