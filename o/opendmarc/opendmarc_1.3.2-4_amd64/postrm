#!/bin/sh

set -e

if [ "$1" = "purge" ]; then
    rm -rf /lib/systemd/system/opendmarc.service
fi

# Automatically added by dh_installinit/11.1.5
if [ "$1" = "purge" ] ; then
	update-rc.d opendmarc remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.1.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'opendmarc.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'opendmarc.service' >/dev/null || true
		deb-systemd-helper unmask 'opendmarc.service' >/dev/null || true
	fi
fi
# End automatically added section


exit 0
