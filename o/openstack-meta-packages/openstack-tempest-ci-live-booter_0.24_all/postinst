#!/bin/sh

set -e

if [ "${1}" = "configure" ] || [ "${1}" = "reconfigure" ] ; then
	A2EN=$(which a2ensite)
	if [ -x "${A2EN}" ] ; then
		${A2EN} tempest-ci.conf
	fi
fi

# Automatically added by dh_installinit/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/openstack-tempest-ci-live-booter" ]; then
		update-rc.d openstack-tempest-ci-live-booter defaults >/dev/null
		invoke-rc.d openstack-tempest-ci-live-booter start || exit 1
	fi
fi
# End automatically added section

