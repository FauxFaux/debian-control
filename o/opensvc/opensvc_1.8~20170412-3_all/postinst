#!/bin/sh -e

# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/opensvc" ]; then
		update-rc.d opensvc defaults >/dev/null
		invoke-rc.d opensvc start || exit $?
	fi
fi
# End automatically added section


# Source debconf library.

. /usr/share/debconf/confmodule
export LANG="C"

db_get opensvc/env
nodemgr set --param node.env --value "$RET" 

db_get opensvc/dbopensvc
nodemgr set --param node.dbopensvc --value "$RET"
