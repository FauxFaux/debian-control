#! /bin/sh
# prerm script for xgraph
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see /usr/share/doc/packaging-manual/

GREP()
{
    grep "$@" /etc/palo.conf > /dev/null
}

case "$1" in
    upgrade)
	# if we're downgrading to < 0.94...
	case "$2" in
	    0.8[0-9]|0.9[0-3])
		if [ -f /etc/palo.conf ] # this test is redundant
		then
		    cp /etc/palo.conf /etc/palo.conf.post-0.93
		    comment="# obsolete with palo-0.94 # "
		    sed -e "s:/usr/share/palo/iplboot:/boot/iplboot:" \
			-e "s:$comment::" \
			< /etc/palo.conf.post-0.93 > /etc/palo.conf
		fi
	    ;;
	esac
	;;
    remove|deconfigure)
        ;;
    failed-upgrade)
        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
