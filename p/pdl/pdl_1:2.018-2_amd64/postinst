#! /bin/sh
# postinst script for pdl
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure|triggered)
        if perl /usr/lib/x86_64-linux-gnu/perl5/5.26/PDL/Doc/scantree.pl /usr/lib/x86_64-linux-gnu/perl5/5.26/,/usr/share/perl5 /var/lib/pdl/pdldoc.db /var/lib/pdl/Index.pod >/dev/null 2>&1 ; then
           perl /usr/lib/x86_64-linux-gnu/perl5/5.26/PDL/Doc/mkhtmldoc.pl -s "PDL/" /usr/lib/x86_64-linux-gnu/perl5/5.26/PDL /var/lib/pdl/html >/dev/null 2>&1
           perl /usr/lib/x86_64-linux-gnu/perl5/5.26/PDL/Doc/mkhtmldoc.pl -s "PDL/" /usr/share/perl5/PDL /var/lib/pdl/html >/dev/null 2>&1
       else
           echo "Skipping PDL documation update, as the package is not usable at the moment" >&2
       fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installmenu/10.10.5
if [ "$1" = "configure" ] && [ -x "`which update-menus 2>/dev/null`" ]; then
	update-menus
fi
# End automatically added section


# Switch directory to symlink
if dpkg-maintscript-helper supports dir_to_symlink 2>/dev/null; then
  dpkg-maintscript-helper dir_to_symlink \
    /usr/lib/x86_64-linux-gnu/perl5/5.26/PDL/HtmlDocs/PDL /var/lib/pdl/html 1:2.016-1~exp3~ -- "$@"
fi

exit 0


