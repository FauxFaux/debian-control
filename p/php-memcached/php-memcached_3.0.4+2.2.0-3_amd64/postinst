#!/bin/sh
set -e

if [ "$1" = "configure" ] && [ -n "$2" ]; then
    for ver in $(phpquery -V); do
	for sapi in $(phpquery -v "$ver" -S); do
	    ini="/etc/php/$ver/$sapi/conf.d/20-memcached.ini"
	    if [ -h $ini ]; then
		rm "$ini"
	    fi
	done
    done
fi

# Automatically added by dh_php/UNDECLARED
for conf in memcached; do
    dpkg-maintscript-helper rm_conffile /etc/php/mods-available/${conf}.ini -- "$@"
done

if [ -e /usr/lib/php/php-maintscript-helper ] ; then
    . /usr/lib/php/php-maintscript-helper

    for version in 7.2 ; do
        for conf in memcached ; do
            php_invoke enmod $version ALL $conf || exit 1
	done
    done
else
    for conf in memcached ; do
        phpenmod $conf
    done
fi
# End automatically added section


exit 0
