#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
    update-alternatives \
	--install /usr/bin/php-config php-config /usr/bin/php-config7.2 72 \
	--slave /usr/share/man/man1/php-config.1.gz php-config.1.gz /usr/share/man/man1/php-config7.2.1.gz
    update-alternatives \
	--install /usr/bin/phpize phpize /usr/bin/phpize7.2 72 \
	--slave /usr/share/man/man1/phpize.1.gz phpize.1.gz /usr/share/man/man1/phpize7.2.1.gz
fi



exit 0
