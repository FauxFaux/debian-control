#!/bin/sh

set -e

dpkg-maintscript-helper mv_conffile \
    /etc/modprobe.d/pptpd.conf \
    /etc/modules-load.d/pptpd.conf \
    1.4.0-9~ \
    -- "$@"

# Automatically added by dh_installinit/11.1.4
if [ "$1" = "purge" ] ; then
	update-rc.d pptpd remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.1.4
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'pptpd.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'pptpd.service' >/dev/null || true
		deb-systemd-helper unmask 'pptpd.service' >/dev/null || true
	fi
fi
# End automatically added section

exit 0
