#!/bin/sh

set -e

DAEMON_USER="prelude-correlator"

add_sysuser()
{
        if ! getent passwd $DAEMON_USER >/dev/null; then
                adduser --system --disabled-login --no-create-home --group $DAEMON_USER 2>&1 > /dev/null
        fi
}

add_sysuser

chown -R prelude-correlator /var/lib/prelude-correlator


# Automatically added by dhpython:
if which pycompile >/dev/null 2>&1; then
	pycompile -p prelude-correlator 
fi

# End automatically added section
# Automatically added by dh_installinit
if [ -x "/etc/init.d/prelude-correlator" ]; then
	update-rc.d prelude-correlator defaults >/dev/null
	invoke-rc.d prelude-correlator start || exit $?
fi
# End automatically added section


exit 0

