#!/bin/sh

set -e

case "$1" in
  purge)
        rm -f /var/log/prometheus/prometheus-apache-exporter.log \
              /var/run/prometheus/prometheus-apache-exporter.pid
        ;;
esac

# Automatically added by dh_installinit/11.5.3
if [ "$1" = "purge" ] ; then
	update-rc.d prometheus-apache-exporter remove >/dev/null
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.5.3
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'prometheus-apache-exporter.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'prometheus-apache-exporter.service' >/dev/null || true
		deb-systemd-helper unmask 'prometheus-apache-exporter.service' >/dev/null || true
	fi
fi
# End automatically added section

