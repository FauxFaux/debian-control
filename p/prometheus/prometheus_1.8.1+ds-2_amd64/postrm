#!/bin/sh
# postrm script for prometheus
# Script executed after the package is removed.

set -e

case "$1" in
  purge)
        rm -rf /var/lib/prometheus/metrics /var/log/prometheus/prometheus.log \
            /var/run/prometheus/prometheus.pid
	# We do NOT remove the system user.
	;;
esac

# Automatically added by dh_installinit/10.10.3
if [ "$1" = "purge" ] ; then
	update-rc.d prometheus remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.10.3
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'prometheus.service' >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'prometheus.service' >/dev/null
		deb-systemd-helper unmask 'prometheus.service' >/dev/null
	fi
fi
# End automatically added section

