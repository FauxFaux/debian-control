#!/bin/sh

set -e

#
# Skip, if we are not in "configure" state
#
if [ "$1" != "configure" ]; then
        echo "I: Skipping configuration"
        exit 0
fi

DIRS="bak/charinfo bak/charsave bnmail chanlogs charinfo
      charsave ladders reports status teams users"

for DIR in $DIRS; do
    mkdir -p /var/lib/pvpgn/$DIR
done

# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/pvpgn" ]; then
		update-rc.d pvpgn defaults >/dev/null
		invoke-rc.d pvpgn start || exit $?
	fi
fi
# End automatically added section


