#!/bin/sh
# postinst script for pysieved
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

case "$1" in
    configure)
    # Register the daemon with the inetd
    update-inetd --group MAIL --add 'sieve\tstream\ttcp\tnowait\troot\t/usr/bin/python\tpython\t/usr/bin/pysieved --inetd'
    ;;
esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.


# Automatically added by dh_python2:
if which pycompile >/dev/null 2>&1; then
	pycompile -p pysieved /usr/share/pysieved
fi

# End automatically added section


exit 0

