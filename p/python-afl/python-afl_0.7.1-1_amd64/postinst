#!/bin/sh
set -e
if [ "$1" = configure ]
then
    update-alternatives \
    --install /usr/bin/py-afl-fuzz py-afl-fuzz /usr/share/python-afl/py-afl-fuzz 20 \
    --slave /usr/share/man/man1/py-afl-fuzz.1.gz py-afl-fuzz.1.gz /usr/share/man/man1/py-afl-fuzz.py2.1.gz
    update-alternatives \
    --install /usr/bin/py-afl-cmin py-afl-cmin /usr/share/python-afl/py-afl-cmin 20
    update-alternatives \
    --install /usr/bin/py-afl-showmap py-afl-showmap /usr/share/python-afl/py-afl-showmap 20
    update-alternatives \
    --install /usr/bin/py-afl-tmin py-afl-tmin /usr/share/python-afl/py-afl-tmin 20
fi

