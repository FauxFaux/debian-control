#!/bin/sh

set -e

if [ "$1" = "remove" ] ; then
	update-alternatives --remove doc8 /usr/bin/python2-doc8
fi


# Automatically added by dh_python2:
if which pyclean >/dev/null 2>&1; then
	pyclean -p python-doc8 
else
	dpkg -L python-doc8 | grep '\.py$' | while read file
	do
		rm -f "${file}"[co] >/dev/null
  	done
fi

# End automatically added section


exit 0
