#!/bin/sh

set -e

if [ "$1" = "remove" ] ; then
	update-alternatives --remove os-inject-fault /usr/bin/python2-os-inject-fault
	update-alternatives --remove os-faults /usr/bin/python2-os-faults
fi


# Automatically added by dh_python2:
if which pyclean >/dev/null 2>&1; then
	pyclean -p python-os-faults 
else
	dpkg -L python-os-faults | grep '\.py$' | while read file
	do
		rm -f "${file}"[co] >/dev/null
  	done
fi

# End automatically added section


exit 0
