#!/bin/sh

set -e

if [ "$1" = "configure" ] ; then
	update-alternatives --install /usr/bin/oslopolicy-checker oslopolicy-checker /usr/bin/python3-oslopolicy-checker 400
	update-alternatives --install /usr/bin/oslopolicy-list-redundant oslopolicy-list-redundant /usr/bin/python3-oslopolicy-list-redundant 400
	update-alternatives --install /usr/bin/oslopolicy-policy-generator oslopolicy-policy-generator /usr/bin/python3-oslopolicy-policy-generator 400
	update-alternatives --install /usr/bin/oslopolicy-sample-generator oslopolicy-sample-generator /usr/bin/python3-oslopolicy-sample-generator 400
	update-alternatives --install /usr/bin/oslopolicy-checker oslopolicy-checker /usr/bin/python3-oslopolicy-checker 400
fi


# Automatically added by dh_python3:
if which py3compile >/dev/null 2>&1; then
	py3compile -p python3-oslo.policy 
fi

# End automatically added section


exit 0
