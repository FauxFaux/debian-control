#!/bin/sh

set -e

if [ "$1" = "remove" ] ; then
	update-alternatives --remove restructuredtext-lint /usr/bin/python2-restructuredtext-lint
	update-alternatives --remove rst-lint /usr/bin/python2-rst-lint
fi


# Automatically added by dhpython:
if which pyclean >/dev/null 2>&1; then
	pyclean -p python-restructuredtext-lint 
else
	dpkg -L python-restructuredtext-lint | grep \.py$ | while read file
	do
		rm -f "${file}"[co] >/dev/null
  	done
fi

# End automatically added section


exit 0
