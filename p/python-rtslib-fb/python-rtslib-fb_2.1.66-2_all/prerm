#!/bin/sh

set -e

if [ "$1" = "remove" ] || [ "$1" = "disappear" ]; then
	update-alternatives --remove targetctl /usr/bin/targetctl-python2
fi

# Automatically added by dh_installinit/11.3.5
if [ -x "/etc/init.d/rtslib-fb-targetctl" ]; then
	invoke-rc.d rtslib-fb-targetctl stop || exit 1
fi
# End automatically added section

# Automatically added by dh_python2:
if which pyclean >/dev/null 2>&1; then
	pyclean -p python-rtslib-fb 
else
	dpkg -L python-rtslib-fb | grep '\.py$' | while read file
	do
		rm -f "${file}"[co] >/dev/null
  	done
fi

# End automatically added section

