#!/bin/sh

set -e

PYTHONVER=3
ALT_NAME1=SL
ALT_LINK1="/usr/bin/${ALT_NAME1}"
ALT_PATH1="/usr/lib/python${PYTHONVER}-softlayer/${ALT_NAME1}"
ALT_NAME2=slcli
ALT_LINK2="/usr/bin/${ALT_NAME2}"
ALT_PATH2="/usr/lib/python${PYTHONVER}-softlayer/${ALT_NAME2}"

case "$1" in
    upgrade)
        ;;
    remove|failed-upgrade|deconfigure)
        update-alternatives --remove "${ALT_NAME1}" "${ALT_PATH1}"
        update-alternatives --remove "${ALT_NAME2}" "${ALT_PATH2}"
        ;;
esac


# Automatically added by dh_python3:
if which py3clean >/dev/null 2>&1; then
	py3clean -p python3-softlayer 
else
	dpkg -L python3-softlayer | perl -ne 's,/([^/]*)\.py$,/__pycache__/\1.*, or next; unlink $_ or die $! foreach glob($_)'
	find /usr/lib/python3/dist-packages/ -type d -name __pycache__ -empty -print0 | xargs --null --no-run-if-empty rmdir
fi

# End automatically added section


exit 0
