#! /bin/sh

set -e

if [ "$1" = configure ]; then
    files=$(dpkg -L libpython3.5-dbg:amd64 | sed -n '/^\/usr\/lib\/python3.5\/.*\.py$/p')
    if [ -n "$files" ]; then
	python3.5 -E -S /usr/lib/python3.5/py_compile.py $files
	if grep -sq '^byte-compile[^#]*optimize' /etc/python/debian_config; then
	    python3.5 -E -S -O /usr/lib/python3.5/py_compile.py $files
	fi
    else
	echo >&2 "python3.5-dbg: can't get files for byte-compilation"
    fi

  if [ -d /usr/include/python3.5_d ] && [ ! -h /usr/include/python3.5_d ]; then
    if rmdir /usr/include/python3.5_d 2> /dev/null; then
      ln -sf python3.5dmu /usr/include/python3.5_d
    else
      echo >&2 "WARNING: non-empty directory on upgrade: /usr/include/python3.5_d"
      ls -l /usr/include/python3.5_d
    fi
  fi
  if [ -d /usr/lib/python3.5/config_d ] && [ ! -h /usr/lib/python3.5/config_d ]; then
    if rmdir /usr/lib/python3.5/config_d 2> /dev/null; then
      ln -sf config-dmu /usr/lib/python3.5/config_d
    else
      echo >&2 "WARNING: non-empty directory on upgrade: /usr/lib/python3.5/config_d"
      ls -l /usr/lib/python3.5/config_d
    fi
  fi
fi



exit 0
