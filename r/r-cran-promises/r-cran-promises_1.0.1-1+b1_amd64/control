Depends: r-base-core (>= 3.5.0-5), r-api-3.5, r-cran-r6, r-cran-rcpp, r-cran-later, r-cran-rlang, r-cran-magrittr, libc6 (>= 2.14), libgcc1 (>= 1:3.0), libstdc++6 (>= 5.2)
