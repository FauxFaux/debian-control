#!/bin/sh
set -e

case "$1" in
    install|upgrade)
        for f in emacs emacs22 emacs23 emacs24 ; do
            SITEDIR=/usr/share/$f/site-lisp/rabbit
            if [ -d $SITEDIR ]
            then
                rm -fr $SITEDIR
            fi
        done
        ;;
    abort-upgrade)
        ;;
    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac
# Automatically added by dh_installemacsen/10.9.2
if ( [ "$1" = "install" ] || [ "$1" = "upgrade" ] ) \
	&& [ -e /var/lib/emacsen-common/state/package/installed/emacsen-common -a -x /usr/lib/emacsen-common/emacs-package-install ]
then
	/usr/lib/emacsen-common/emacs-package-install --preinst rabbit-mode
fi
# End automatically added section


exit 0
