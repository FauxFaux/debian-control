#!/bin/sh

set -e

case "$1" in
    "configure"|"abort-upgrade"|"abort-remove"|"abort-deconfigure")
	update-alternatives \
	    --install /usr/bin/x-session-manager \
		      x-session-manager \
		      /usr/bin/razor-session \
		      50 \
	    --slave /usr/share/man/man1/x-session-manager.1.gz \
		    x-session-manager.1.gz \
		    /usr/share/man/man1/razor-session.1.gz
	;;
esac


