#!/bin/sh

set -e

if [ "$1" = "purge" ] ; then

        # MySQL uses debconf to get user confirmation before
        # wiping it's lib database directory, a similar
        # approach might be desirable for reConServer
        #rm -rf /var/lib/reConServer
        rm -rf /var/run/reConServer

        if getent passwd recon >/dev/null; then
                userdel recon
        fi
        if getent group recon >/dev/null; then
                groupdel recon
        fi
fi


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d reconserver remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section


exit 0

