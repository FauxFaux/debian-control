#!/bin/sh
set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


# Will be replaced by the binary package flavour in debian/rules
flavour="mls"
basedir="/etc/selinux/${flavour}"

case "$1" in
    purge)
	rm -rf "${basedir}"
	rm -rf /var/lib/selinux/${flavour}
	[ -d /var/lib/selinux/final/ ] && rmdir --ignore-fail-on-non-empty /var/lib/selinux/final/
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installdeb/10.7.2
dpkg-maintscript-helper rm_conffile /etc/selinux/mls/modules/active/file_contexts.local 2:2.20140421-10~ -- "$@"
# End automatically added section
# Automatically added by dh_installdeb/10.7.2
dpkg-maintscript-helper rm_conffile /etc/selinux/mls/modules/semanage.trans.LOCK 2:2.20140421-10~ -- "$@"
# End automatically added section
# Automatically added by dh_installdeb/10.7.2
dpkg-maintscript-helper rm_conffile /etc/selinux/mls/modules/semanage.read.LOCK 2:2.20140421-10~ -- "$@"
# End automatically added section
# Automatically added by dh_installdeb/10.7.2
dpkg-maintscript-helper rm_conffile /etc/selinux/mls/users/system.users 2:2.20140421-10~ -- "$@"
# End automatically added section
# Automatically added by dh_installdeb/10.7.2
dpkg-maintscript-helper rm_conffile /etc/selinux/mls/users/local.users 2:2.20140421-10~ -- "$@"
# End automatically added section


exit 0
