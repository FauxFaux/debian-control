#!/bin/sh

set -e

case "$1" in
	configure)
		# Add the user we want to run as and join the dialout group.
		adduser --quiet --system --group --home /var/log/remote-tty \
			--shell /bin/sh --gecos "Remote TTY" --disabled-login \
			rttymgr
		adduser --quiet rttymgr dialout

		# We want to own our /var/run and /var/log dirs.
		chown -R rttymgr:rttymgr /var/log/remote-tty
		;;

	abort-upgrade|abort-remove|abort-deconfigure)
		;;

	*)
		echo "postinst called with unknown argument \'$1\'" >&2
		exit 1
		;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/remote-tty" ]; then
		update-rc.d remote-tty defaults 95 05 >/dev/null
		invoke-rc.d remote-tty start || exit $?
	fi
fi
# End automatically added section


exit 0
