#!/bin/sh

set -e

if [ "$1" = "purge" ] ; then

        # MySQL uses debconf to get user confirmation before
        # wiping it's lib database directory, a similar
        # approach might be desirable for repro
        rm -rf /var/lib/repro
        rm -rf /var/run/repro

        rm -rf /etc/repro/dh2048.pem

        if getent passwd repro >/dev/null; then
                userdel repro
        fi
        if getent group repro >/dev/null; then
                groupdel repro
        fi

        if [ -d /var/log/repro ];
        then
                rm -rf /var/log/repro
        fi
fi


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d repro remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section


exit 0

