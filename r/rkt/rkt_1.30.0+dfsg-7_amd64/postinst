#!/bin/sh

set -e

case "$1" in
    configure)
        if ! getent group rkt >>/dev/null 2>&1 ; then
            addgroup --quiet --system rkt
        fi
        if ! getent group rkt-admin >>/dev/null 2>&1 ; then
            addgroup --quiet --system rkt-admin
        fi
        ## Prepare rkt data directories in "/var/lib/rkt":
        /usr/lib/rkt/setup-data-dir.sh  2>>/dev/null
    ;;
esac

# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	# In case this system is running systemd, we need to ensure that all
	# necessary tmpfiles (if any) are created before starting.
	if [ -d /run/systemd/system ] ; then
		systemd-tmpfiles --create rkt.conf >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	# In case this system is running systemd, we need to ensure that all
	# necessary tmpfiles (if any) are created before starting.
	if [ -d /run/systemd/system ] ; then
		systemd-tmpfiles --create rkt.conf >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	# In case this system is running systemd, we need to ensure that all
	# necessary tmpfiles (if any) are created before starting.
	if [ -d /run/systemd/system ] ; then
		systemd-tmpfiles --create rkt.conf >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if deb-systemd-helper debian-installed 'cni-dhcp.service'; then
		# This will only remove masks created by d-s-h on package removal.
		deb-systemd-helper unmask 'cni-dhcp.service' >/dev/null || true

		if deb-systemd-helper --quiet was-enabled 'cni-dhcp.service'; then
			# Create new symlinks, if any.
			deb-systemd-helper enable 'cni-dhcp.service' >/dev/null || true
		fi
	fi

	# Update the statefile to add new symlinks (if any), which need to be cleaned
	# up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'cni-dhcp.service' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if deb-systemd-helper debian-installed 'cni-dhcp.socket'; then
		# This will only remove masks created by d-s-h on package removal.
		deb-systemd-helper unmask 'cni-dhcp.socket' >/dev/null || true

		if deb-systemd-helper --quiet was-enabled 'cni-dhcp.socket'; then
			# Create new symlinks, if any.
			deb-systemd-helper enable 'cni-dhcp.socket' >/dev/null || true
		fi
	fi

	# Update the statefile to add new symlinks (if any), which need to be cleaned
	# up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'cni-dhcp.socket' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -d /run/systemd/system ]; then
		systemctl --system daemon-reload >/dev/null || true
		if [ -n "$2" ]; then
			deb-systemd-invoke try-restart 'cni-dhcp.service' 'cni-dhcp.socket' >/dev/null || true
		fi
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	# This will only remove masks created by d-s-h on package removal.
	deb-systemd-helper unmask 'rkt-gc.timer' >/dev/null || true

	# was-enabled defaults to true, so new installations run enable.
	if deb-systemd-helper --quiet was-enabled 'rkt-gc.timer'; then
		# Enables the unit on first installation, creates new
		# symlinks on upgrades if the unit file has changed.
		deb-systemd-helper enable 'rkt-gc.timer' >/dev/null || true
	else
		# Update the statefile to add new symlinks (if any), which need to be
		# cleaned up on purge. Also remove old symlinks.
		deb-systemd-helper update-state 'rkt-gc.timer' >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -d /run/systemd/system ]; then
		systemctl --system daemon-reload >/dev/null || true
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		deb-systemd-invoke $_dh_action 'rkt-gc.service' 'rkt-gc.timer' >/dev/null || true
	fi
fi
# End automatically added section

