#!/bin/sh
# prerm script for #PACKAGE#

set -e

case "$1" in
    remove|upgrade|deconfigure)
      # Rspamd web interface doesn't support symlinks and directory traversal
      rm /usr/share/rspamd/www/js/lib/bootstrap.min.js
      rm /usr/share/rspamd/www/js/lib/d3.min.js
      rm /usr/share/rspamd/www/js/lib/jquery-3.3.1.min.js
      rm /usr/share/rspamd/www/js/lib/require.min.js
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.5.3
if [ -x "/etc/init.d/rspamd" ] && [ "$1" = remove ]; then
	invoke-rc.d rspamd stop || exit 1
fi
# End automatically added section
# Automatically added by dh_installdeb/11.5.3
dpkg-maintscript-helper rm_conffile /etc/rspamd/logging.conf 0.6.11\~ rspamd -- "$@"
dpkg-maintscript-helper rm_conffile /etc/rspamd/options.conf 0.6.11\~ rspamd -- "$@"
dpkg-maintscript-helper rm_conffile /etc/rspamd/workers.conf 0.6.11\~ rspamd -- "$@"
# End automatically added section


exit 0
