#!/bin/sh

set -e

add_sysuser()
{
	if ! getent passwd sagan >/dev/null; then
		adduser --system --disabled-login --no-create-home --home /nonexistent --ingroup adm sagan 2>&1 > /dev/null
	fi
}

add_sysuser

chown sagan:adm /var/log/sagan

# Automatically added by dh_installinit/11.3.5
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/sagan" ]; then
		update-rc.d sagan defaults >/dev/null
		invoke-rc.d sagan start || exit 1
	fi
fi
# End automatically added section


exit 0
