#!/bin/sh

set -e

if [ "${1}" = "purge" ] ; then
	[ -e /etc/sftpcloudfs ] && rm -fr /etc/sftpcloudfs
	[ -e /var/log/sftpcloudfs ] && rm -fr /var/log/sftpcloudfs
fi

# Automatically added by dh_installinit/11.1.3
if [ "$1" = "purge" ] ; then
	update-rc.d sftpcloudfs remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installdebconf/11.1.3
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


exit 0
