#!/bin/sh
# postrm script for shairport-sync
#
# see: dh_installdeb(1)

set -e

case "$1" in
purge|remove|upgrade|failed-upgrade)
	# Try to remove the unused and obsolete /var/lib/shairport-sync
	# directory. Ignore the failure if it's non-empty.
	rmdir /var/lib/shairport-sync || true
	;;

abort-install|abort-upgrade|disappear)
	;;

*)
	echo "postrm called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.3.5
if [ "$1" = "purge" ] ; then
	update-rc.d shairport-sync remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.3.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'shairport-sync.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'shairport-sync.service' >/dev/null || true
		deb-systemd-helper unmask 'shairport-sync.service' >/dev/null || true
	fi
fi
# End automatically added section


exit 0
