#!/bin/sh -e

case "$1" in
    configure)
        # if we are upgrading from version < 3.4 then we have to rename the
        # configuration file
        if [ "$2" ] && dpkg --compare-versions "$2" lt "3.4"
        then
            if [ -f /etc/shorewall-lite/shorewall.conf ]
            then
                rm /etc/shorewall-lite/shorewall.conf
            fi
        fi
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;
        
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
        ;;
esac

# Automatically added by dh_installinit/11.1.5
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/shorewall-lite" ]; then
		update-rc.d shorewall-lite defaults >/dev/null || exit 1
	fi
fi
# End automatically added section

