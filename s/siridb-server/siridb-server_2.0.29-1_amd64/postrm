#!/bin/sh
set -e

config_file=/etc/siridb/siridb.conf

case "$1" in
    purge)
        [ -d "/var/lib/siridb" ] && rm -rf /var/lib/siridb
        if which ucf >/dev/null 2>&1; then
            ucf --purge $config_file
        fi
        if [ -x "`which ucfr 2>/dev/null`" ]; then
	        ucfr --purge siridb-server $config_file
        fi
        for ext in .ucf-new .ucf-old .ucf-dist ""; do
            rm -f "$config_file$ext"
        done
        ;;
    remove)
	    ;;
esac

# Automatically added by dh_installsystemd/11.3.5
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.3.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'siridb-server.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'siridb-server.service' >/dev/null || true
		deb-systemd-helper unmask 'siridb-server.service' >/dev/null || true
	fi
fi
# End automatically added section

exit 0
