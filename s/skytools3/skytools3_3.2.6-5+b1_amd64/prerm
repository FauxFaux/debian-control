#!/bin/sh -e

case $1 in
    remove)
	for f in londiste scriptmgr queue_mover queue_splitter; do
	    update-alternatives --remove $f /usr/bin/${f}3 || exit 1 ;
	done;;
esac

# Automatically added by dh_installinit
if [ -x "/etc/init.d/skytools3" ]; then
	invoke-rc.d skytools3 stop || exit $?
fi
# End automatically added section

# Automatically added by dh_python2:
if which pyclean >/dev/null 2>&1; then
	pyclean -p skytools3 
else
	dpkg -L skytools3 | grep \.py$ | while read file
	do
		rm -f "${file}"[co] >/dev/null
  	done
fi

# End automatically added section

