#!/bin/sh
# postrm script for slurmd
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
       purge)
         rm -rf /var/run/slurm-llnl/slurmd
         rm -rf /var/lib/slurm-llnl/slurmd
         rm -f /var/log/slurm-llnl/slurmd*.log*
         if [    ! -e /usr/sbin/slurmctld \
              -a ! -e /usr/sbin/slurmdbd \
              -a ! -e /usr/bin/squeue ] ; then
            # Deleting slurm user
            if [ -n "$(id -u slurm 2>/dev/null)" ] ; then
              deluser --quiet slurm || true
            fi
            rm -rf /var/run/slurm-llnl
            if which ucf >/dev/null; then
              ucf --purge /etc/slurm-llnl/slurm.conf
            fi
            rm -f /etc/slurm-llnl/slurm.conf
         fi
         ;;

       remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)

        ;;


    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit/11.3.5
if [ "$1" = "purge" ] ; then
	update-rc.d slurmd remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.3.5
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'slurmd.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'slurmd.service' >/dev/null || true
		deb-systemd-helper unmask 'slurmd.service' >/dev/null || true
	fi
fi
# End automatically added section


exit 0
