#! /bin/sh

case "$1" in
  configure)
    if ! dpkg-statoverride --list /usr/games/spacearyarya >/dev/null; then
      dpkg-statoverride --update --add root games 2755 /usr/games/spacearyarya
    fi
    if ! test -f /var/games/spacearyarya.scores; then
      cat >/var/games/spacearyarya.scores <<EOF
5000
5000 1 anonymous
4000 1 anonymous
3000 1 anonymous
2000 0 anonymous
1000 0 anonymous
EOF
      chown root:games /var/games/spacearyarya.scores
      chmod 0664 /var/games/spacearyarya.scores
    fi
    ;;
  abort-upgrade|abort-remove|abort-deconfigure)
    ;;
  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# Automatically added by dh_installmenu
if [ "$1" = "configure" ] && [ -x "`which update-menus 2>/dev/null`" ]; then
	update-menus
fi
# End automatically added section


