#!/bin/sh

set -e

if [ "$1" = install ] || [ "$1" = upgrade ]; then
       if [ -e "/etc/udev/rules.d/99-wispy.rules" ]; then
               if [ "`md5sum \"/etc/udev/rules.d/99-wispy.rules\" | sed -e \"s/ .*//\"`" = \
                    "`dpkg-query -W -f='${Conffiles}' spectools | sed -n -e \"\\\\' /etc/udev/rules.d/99-wispy.rules's/.* //p\"`" ]
               then
                       rm -f "/etc/udev/rules.d/99-wispy.rules"
               fi
       fi
fi


