#! /bin/sh
# postinst script for spip
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

case "$1" in
    configure)

	chown www-data /var/lib/spip/sites/default/IMG
	chown www-data /var/lib/spip/sites/default/tmp
	chown www-data /var/lib/spip/sites/default/local
	chown www-data /var/lib/spip/sites/default/config
	chown www-data /var/lib/spip/plugins
	chown www-data /var/lib/spip/local
	chown www-data /var/lib/spip/IMG
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_apache2/UNDECLARED
if true; then
	if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
		. /usr/share/apache2/apache2-maintscript-helper
		for conf in spip  ; do
			apache2_invoke enconf $conf  || exit 1
		done
	fi
fi
# End automatically added section


exit 0


