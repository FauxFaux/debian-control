#!/bin/sh

set -e

JYTHON="/usr/bin/jython -Dpython.cachedir.skip=true"
JYTHON_DISTDIR=/usr/share/jython/Lib/site-packages
if [ -z "$HOME" ] ; then
    HOME="/unavailable"
    export HOME
fi
PKG=stilts

case "$1" in
     configure)
	 $JYTHON -c "import py_compile; py_compile.compile('${JYTHON_DISTDIR}/${PKG}.py')"
	 ;;
     abort-upgrade|abort-remove|abort-deconfigure)
	 exit 0
	 ;;
     *)
	 echo "postinst called with unknown argument '$1'" >&2
	 exit 1
	 ;;
esac


