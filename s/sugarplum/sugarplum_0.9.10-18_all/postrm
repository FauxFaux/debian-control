#!/bin/sh
# postrm script for sugarplum
set -e

case $1 in
    "purge")
        rm -f /var/log/sugarplum.log /var/log/sugarplum.log.[0-9]*
    ;;
esac

# Automatically added by dh_installdeb
dpkg-maintscript-helper mv_conffile /etc/sugarplum/apache.conf /etc/apache2/conf-available/sugarplum.conf 0.9.10-18~ -- "$@"
# End automatically added section
# Automatically added by dh_apache2
if [ "$1" = "purge" ] ; then
	if true; then
		if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
			. /usr/share/apache2/apache2-maintscript-helper

			for conf in sugarplum  ; do
				apache2_invoke disconf $conf  || exit $?
			done
		fi
	fi
fi
# End automatically added section

