#!/bin/sh

set -e

case "$1" in
    purge)
        rm -fr  \
            /etc/tarantool \
            /var/log/tarantool \
            /var/run/tarantool \
            /var/lib/tarantool
    ;;
esac

# Automatically added by dh_installinit/10.8
if [ "$1" = "purge" ] ; then
	update-rc.d tarantool remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/10.8
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask tarantool.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge tarantool.service >/dev/null
		deb-systemd-helper unmask tarantool.service >/dev/null
	fi
fi
# End automatically added section


