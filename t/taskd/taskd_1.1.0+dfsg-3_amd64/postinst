#!/bin/sh

set -e

case "$1" in
    configure)

      # Create taskd user
      if ! getent passwd Debian-taskd > /dev/null 2>&1
      then
        adduser --system --group --quiet \
          --home /var/lib/taskd --no-create-home \
          --shell /usr/sbin/nologin --gecos "Taskd sync server" \
          --force-badname Debian-taskd
      fi

      chown -R Debian-taskd: /var/lib/taskd /etc/taskd

    ;;
esac

# Automatically added by dh_systemd_enable
# This will only remove masks created by d-s-h on package removal.
deb-systemd-helper unmask taskd.service >/dev/null || true

# was-enabled defaults to true, so new installations run enable.
if deb-systemd-helper --quiet was-enabled taskd.service; then
	# Enables the unit on first installation, creates new
	# symlinks on upgrades if the unit file has changed.
	deb-systemd-helper enable taskd.service >/dev/null || true
else
	# Update the statefile to add new symlinks (if any), which need to be
	# cleaned up on purge. Also remove old symlinks.
	deb-systemd-helper update-state taskd.service >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/taskd" ]; then
		update-rc.d taskd defaults >/dev/null
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		invoke-rc.d taskd $_dh_action || exit $?
	fi
fi
# End automatically added section

