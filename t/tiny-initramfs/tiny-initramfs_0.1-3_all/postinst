#!/bin/sh
# postinst script for tiny-initramfs

set -e

case "$1" in
    configure)
        dpkg-trigger --no-await update-initramfs
    ;;

    triggered)
        DPKG_MAINTSCRIPT_PACKAGE='' update-tirfs
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac



exit 0
