#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
	adduser --system --quiet --group --no-create-home tircd || true
	mkdir -p /var/log/tircd
	chown -R tircd:tircd /var/log/tircd
	chown -R tircd:tircd /var/lib/tircd
fi

# Automatically added by dh_installinit
if [ -x "/etc/init.d/tircd" ]; then
	update-rc.d tircd defaults >/dev/null
	invoke-rc.d tircd start || exit $?
fi
# End automatically added section

