#!/bin/sh

set -e

destdir="/var/lib/mecab/dic/unidic"

remove_symlinks()
{    
    if [ -d $destdir ]; then
      rm -f $destdir/*
    fi
}


case "$1" in
    install|upgrade)
    remove_symlinks
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
