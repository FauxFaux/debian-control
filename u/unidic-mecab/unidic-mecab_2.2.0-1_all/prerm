#!/bin/sh

set -e

destdir=/var/lib/mecab/dic/unidic

remove_mecabfiles()
{
    if [ -d $destdir ]; then
      rm -f $destdir/*
    fi
}


case "$1" in
    remove)
    update-alternatives --remove mecab-dictionary ${destdir}
    remove_mecabfiles
    ;;

    upgrade|deconfigure)
    remove_mecabfiles
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
