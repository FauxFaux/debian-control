#!/bin/sh

set -e

# This file is common between unison and unison-gtk package
if false; then
  update-alternatives --install /usr/bin/unison-gtk unison-gtk /usr/bin/unison-latest-stable-gtk 20 \
    --slave /usr/share/man/man1/unison-gtk.1.gz unison-gtk.1.gz /usr/share/man/man1/unison-latest-stable-gtk.1.gz

  update-alternatives --install /usr/bin/unison unison /usr/bin/unison-latest-stable-gtk 20 \
    --slave /usr/share/man/man1/unison.1.gz unison.1.gz /usr/share/man/man1/unison-latest-stable-gtk.1.gz
else
  update-alternatives --install /usr/bin/unison unison /usr/bin/unison-latest-stable 20 \
    --slave /usr/share/man/man1/unison.1.gz unison.1.gz /usr/share/man/man1/unison-latest-stable.1.gz
fi


