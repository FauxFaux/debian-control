#! /bin/sh
# postinst script for usemod-wiki

set -e

case "$1" in
    configure)
	if test ! -f /var/lib/usemod-wiki/page/H/HomePage.db ; then
		mkdir -p /var/lib/usemod-wiki/page/H
		cp /usr/share/usemod-wiki/HomePage.db /var/lib/usemod-wiki/page/H
		chown www-data:www-data \
			/var/lib/usemod-wiki \
			/var/lib/usemod-wiki/page \
			/var/lib/usemod-wiki/page/H \
			/var/lib/usemod-wiki/page/H/HomePage.db
	fi
    ;;
esac

# Automatically added by dh_apache2/UNDECLARED
if true; then
	if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
		. /usr/share/apache2/apache2-maintscript-helper
		for conf in usemod-wiki  ; do
			apache2_invoke enconf $conf  || exit 1
		done
	fi
fi
# End automatically added section
# Automatically added by dh_installdeb/11.3.5
dpkg-maintscript-helper mv_conffile /etc/apache2/conf.d/usemod-wiki /etc/apache2/conf-available/usemod-wiki.conf 1.0.5-1 -- "$@"
# End automatically added section


exit 0


