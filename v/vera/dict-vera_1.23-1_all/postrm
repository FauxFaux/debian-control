#!/bin/sh

set -e

case "$1" in 
    remove|purge)
         # We used to test for their existence using:
         #    if [ -x path/cmd ]; then cmd; fi
         # However, the following accomplishes the same thing.
         dictdconfig -w || true
         invoke-rc.d dictd restart || true

         exit 0
     ;;


    upgrade|abort-upgrade|abort-remove|abort-deconfigure|in-favour|removing)
        exit 0;
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2;
        exit 0;
    ;;
esac


