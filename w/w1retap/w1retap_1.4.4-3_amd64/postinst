#!/bin/sh
# postinst script for w1retap
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        adduser --system --group --home /var/lib/w1retap w1retap \
            --quiet --gecos "w1retap daemon"
        adduser w1retap dialout
        if [ ! -d /var/lib/w1retap ]; then
                mkdir /var/lib/w1retap
                chown w1retap:w1retap /var/lib/w1retap
                chmod 0755 /var/lib/w1retap
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_systemd_enable
if deb-systemd-helper debian-installed w1retap.service; then
	# This will only remove masks created by d-s-h on package removal.
	deb-systemd-helper unmask w1retap.service >/dev/null || true

	if deb-systemd-helper --quiet was-enabled w1retap.service; then
		# Create new symlinks, if any.
		deb-systemd-helper enable w1retap.service >/dev/null || true
	fi
fi

# Update the statefile to add new symlinks (if any), which need to be cleaned
# up on purge. Also remove old symlinks.
deb-systemd-helper update-state w1retap.service >/dev/null || true
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/w1retap" ]; then
		update-rc.d w1retap defaults >/dev/null || exit $?
	fi
fi
# End automatically added section


exit 0
