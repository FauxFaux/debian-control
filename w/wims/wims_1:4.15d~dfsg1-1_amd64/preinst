#!/bin/sh
# preinst script for wims
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
      if ! getent passwd wims > /dev/null
      then
	  adduser --system --group --home /var/lib/wims  --no-create-home wims
      fi
      if ! getent passwd nowims > /dev/null
      then
	  adduser --system --group --home /  --no-create-home nowims
      fi
      # remove non-symlink /var/lib/wims/bin if it exists (from an older
      # version of wims package)
      if [ -e /var/lib/wims/bin -a ! -L /var/lib/wims/bin ]; then
	  rm -rf /var/lib/wims/bin
      fi
      ## remove symlinks existing in /var/lib/wims/public_html/scripts/model/
      ## since they can be a problem if there is no symlink in the
      ## newer package
      for f in $(find /var/lib/wims/public_html/scripts/model/ -maxdepth 1); do
	  if [ -L $f ]; then rm $f; fi
      done
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installdeb/11.3.4
dpkg-maintscript-helper symlink_to_dir /var/lib/wims/public_html/scripts/js/edit_area /usr/share/javascript/edit-area 4.13c\~dfsg1-2 -- "$@"
# End automatically added section


exit 0


