#!/bin/sh

set -e

case "$1" in
    configure)
        dpkg-trigger wine-development
        ;;
    triggered)
        # debian alternatives system
        case -development in
            -stable)
                PRIORITY=70;;
            -development)
                PRIORITY=50;;
            *)
                echo "-development unknown"; exit 1;;
        esac

        apps="wineserver
              msiexec
              regedit
              winecfg
              winedbg
              wineboot
              winefile
              winepath
              regsvr32
              wineconsole

              wine64

              wmc
              wrc
              widl
              winecpp
              winegcc
              wineg++
              winedump
              winebuild
              winemaker"

        slaves=
        for app in $apps; do
            slaves="$slaves
                    --slave /usr/bin/$app $app
                            /usr/bin/${app}-development
                    --slave /usr/share/man/man1/${app}.1.gz ${app}.1.gz
                            /usr/share/man/man1/${app}-development.1.gz"
        done

        update-alternatives --quiet \
            --install /usr/bin/wine wine /usr/bin/wine-development $PRIORITY \
            $slaves \
            --slave /usr/share/man/man1/wine.1.gz wine.1.gz \
                    /usr/share/man/man1/wine-development.1.gz \
            --slave /usr/share/man/de/man1/wine.1.gz wine.de.1.gz \
                    /usr/share/man/de/man1/wine-development.1.gz \
            --slave /usr/share/man/fr/man1/wine.1.gz wine.fr.1.gz \
                    /usr/share/man/fr/man1/wine-development.1.gz \
            --slave /usr/share/man/pl/man1/wine.1.gz wine.pl.1.gz \
                    /usr/share/man/pl/man1/wine-development.1.gz \
            --slave /usr/share/man/de/man1/wineserver.1.gz wineserver.de.1.gz \
                    /usr/share/man/de/man1/wineserver-development.1.gz \
            --slave /usr/share/man/fr/man1/wineserver.1.gz wineserver.fr.1.gz \
                    /usr/share/man/fr/man1/wineserver-development.1.gz \
            --slave /usr/share/man/de/man1/winemaker.1.gz winemaker.de.1.gz \
                    /usr/share/man/de/man1/winemaker-development.1.gz \
            --slave /usr/share/man/fr/man1/winemaker.1.gz winemaker.fr.1.gz \
                    /usr/share/man/fr/man1/winemaker-development.1.gz \
            --slave /usr/share/icons/hicolor/scalable/apps/wine.svg wine.svg \
                    /usr/share/icons/hicolor/scalable/apps/wine-development.svg
        ;;
esac



exit 0
