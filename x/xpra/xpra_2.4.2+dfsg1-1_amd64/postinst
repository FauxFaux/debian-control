#!/bin/sh

set -e

case "${1}" in
    configure)
        if ! getent group xpra >> /dev/null 2>&1; then
            addgroup --quiet --system xpra
        fi
    ;;
esac


# Automatically added by dh_python2:
if which pycompile >/dev/null 2>&1; then
	pycompile -p xpra 
fi

# End automatically added section
# Automatically added by dh_installsystemd/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	# In case this system is running systemd, we need to ensure that all
	# necessary tmpfiles (if any) are created before starting.
	if [ -d /run/systemd/system ] ; then
		systemd-tmpfiles --create xpra.conf >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_icons/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if which update-icon-caches >/dev/null 2>&1 ; then
		update-icon-caches /usr/share/icons/xpra-mdns.png /usr/share/icons/xpra-shadow.png /usr/share/icons/xpra.png
	fi
fi
# End automatically added section
# Automatically added by dh_installinit/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -x "/etc/init.d/xpra" ]; then
		update-rc.d xpra defaults-disabled >/dev/null || exit 1
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if deb-systemd-helper debian-installed 'xpra.service'; then
		# This will only remove masks created by d-s-h on package removal.
		deb-systemd-helper unmask 'xpra.service' >/dev/null || true

		if deb-systemd-helper --quiet was-enabled 'xpra.service'; then
			# Create new symlinks, if any.
			deb-systemd-helper enable 'xpra.service' >/dev/null || true
		fi
	fi

	# Update the statefile to add new symlinks (if any), which need to be cleaned
	# up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'xpra.service' >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.5.3
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if deb-systemd-helper debian-installed 'xpra.socket'; then
		# This will only remove masks created by d-s-h on package removal.
		deb-systemd-helper unmask 'xpra.socket' >/dev/null || true

		if deb-systemd-helper --quiet was-enabled 'xpra.socket'; then
			# Create new symlinks, if any.
			deb-systemd-helper enable 'xpra.socket' >/dev/null || true
		fi
	fi

	# Update the statefile to add new symlinks (if any), which need to be cleaned
	# up on purge. Also remove old symlinks.
	deb-systemd-helper update-state 'xpra.socket' >/dev/null || true
fi
# End automatically added section

