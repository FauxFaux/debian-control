#!/bin/sh
# postrm script for yrmcds
#
# see: dh_installdeb(1)

set -e

# Automatically added by dh_installinit/11.1.4
if [ "$1" = "purge" ] ; then
	update-rc.d yrmcds remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.1.4
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'yrmcds.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'yrmcds.service' >/dev/null || true
		deb-systemd-helper unmask 'yrmcds.service' >/dev/null || true
	fi
fi
# End automatically added section


if [ "$1" = "purge" ]; then
    rm -f /var/log/yrmcds.log
	rm -f /etc/systemd/system/yrmcds.service
    rm -f /etc/systemd/system/multi-user.target.wants/yrmcds.service

	rm -f /var/lib/systemd/deb-systemd-helper-enabled/yrmcds.service.dsh-also
    rm -f /var/lib/systemd/deb-systemd-helper-enabled/multi-user.target.wants/yrmcds.service
	rm -f /var/lib/systemd/deb-systemd-helper-masked/yrmcds.service
    rm -f /etc/init/yrmcds.override

    deluser --quiet --system yrmcds || true
    delgroup --quiet --system --only-if-empty yrmcds || true
fi

exit 0
