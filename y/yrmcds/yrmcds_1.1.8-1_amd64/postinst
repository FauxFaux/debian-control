#!/bin/sh
# postinst script for yrmcds
#
# see: dh_installdeb(1)

set -e

LOG=/var/log/yrmcds.log
USER=yrmcds
GROUP=$USER


case "$1" in
    configure)
	getent group  $GROUP > /dev/null 2>&1 || addgroup --quiet --system $GROUP
	getent passwd $USER  > /dev/null 2>&1 || adduser  --quiet --system --home /var/run/yrmcds \
                                  --shell /bin/false --ingroup $GROUP --disabled-password \
                                  --disabled-login --gecos "$USER" $USER
	touch $LOG && chown $USER:$GROUP $LOG && chmod 0644 $LOG
	invoke-rc.d yrmcds restart
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_systemd_enable
# This will only remove masks created by d-s-h on package removal.
deb-systemd-helper unmask yrmcds.service >/dev/null || true

# was-enabled defaults to true, so new installations run enable.
if deb-systemd-helper --quiet was-enabled yrmcds.service; then
	# Enables the unit on first installation, creates new
	# symlinks on upgrades if the unit file has changed.
	deb-systemd-helper enable yrmcds.service >/dev/null || true
else
	# Update the statefile to add new symlinks (if any), which need to be
	# cleaned up on purge. Also remove old symlinks.
	deb-systemd-helper update-state yrmcds.service >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/yrmcds" ]; then
		update-rc.d yrmcds defaults >/dev/null
		invoke-rc.d yrmcds start || exit $?
	fi
fi
# End automatically added section


exit 0
