#!/bin/sh

set -e

if [ "$1" != upgrade ] || dpkg --compare-versions "$2" lt 3.1.1-2; then
        update-alternatives --install /usr/bin/talk talk \
                                      /usr/bin/ytalk 110 \
                            --slave /usr/share/man/man1/talk.1.gz talk.1.gz \
                                    /usr/share/man/man1/ytalk.1.gz
fi

