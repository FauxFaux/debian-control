#!/bin/sh

set -e

case "$1" in
    purge)
        rm -f /var/lib/zabbix/zabbix.db
        rm -fr /var/log/zabbix-proxy
        rm -fr /var/run/zabbix
    ;;
esac

# Automatically added by dh_installinit/11.2.1
if [ "$1" = "purge" ] ; then
	update-rc.d zabbix-proxy remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_installdeb/11.2.1
dpkg-maintscript-helper rm_conffile /etc/default/zabbix-proxy 1:2.2.7\+dfsg-2\~ -- "$@"
# End automatically added section
# Automatically added by dh_ucf/11.2.1
if [ "$1" = "purge" ]; then
	for ext in .ucf-new .ucf-old .ucf-dist ""; do
		rm -f "/etc/zabbix/zabbix_proxy.conf$ext"
	done
	
	if [ -x "`which ucf 2>/dev/null`" ]; then
		ucf --purge "/etc/zabbix/zabbix_proxy.conf"
	fi
	if [ -x "`which ucfr 2>/dev/null`" ]; then
		ucfr --purge zabbix-proxy-sqlite3 "/etc/zabbix/zabbix_proxy.conf"
	fi
fi
# End automatically added section
# Automatically added by dh_installsystemd/11.2.1
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'zabbix-proxy.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'zabbix-proxy.service' >/dev/null || true
		deb-systemd-helper unmask 'zabbix-proxy.service' >/dev/null || true
	fi
fi
# End automatically added section

