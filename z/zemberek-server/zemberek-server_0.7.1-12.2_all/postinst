#!/bin/sh
# postinst script for zemberek
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        if ! getent group zemberek > /dev/null; then
            addgroup --system zemberek
        fi
        if ! getent passwd zemberek > /dev/null; then
            adduser --quiet --system --ingroup zemberek --no-create-home --home /tmp zemberek
        fi
		touch /var/log/zemberek-server.log
		chown zemberek:zemberek /var/log/zemberek-server.log
		
		if [ -x /etc/init.d/dbus ]; then
		    invoke-rc.d dbus force-reload || true
		fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installinit
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ]; then
	if [ -x "/etc/init.d/zemberek-server" ]; then
		update-rc.d zemberek-server defaults >/dev/null
		invoke-rc.d zemberek-server start || exit $?
	fi
fi
# End automatically added section


exit 0


