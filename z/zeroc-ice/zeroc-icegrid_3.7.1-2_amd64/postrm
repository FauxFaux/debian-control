#!/bin/sh
# postrm script for zeroc-icegrid
set -e

if [ "$1" = "purge" ]; then
    # We remove /var/lib/ice/icegrid
    rm -rf /var/lib/ice/icegrid

    # Remove /var/lib/ice/icegrid
    for i in icegrid icegrid/node1 icegrid/registry
    do
        dpkg-statoverride --remove /var/lib/ice/$i >/dev/null 2>/dev/null || true
    done
fi

# Automatically added by dh_systemd_start/11.3.2
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.3.2
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'icegridnode.service' 'icegridregistry.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'icegridnode.service' 'icegridregistry.service' >/dev/null || true
		deb-systemd-helper unmask 'icegridnode.service' 'icegridregistry.service' >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.3.2
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'icegridnode.service' 'icegridregistry.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'icegridnode.service' 'icegridregistry.service' >/dev/null || true
		deb-systemd-helper unmask 'icegridnode.service' 'icegridregistry.service' >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_systemd_enable/11.3.2
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'icegridregistry.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'icegridregistry.service' >/dev/null || true
		deb-systemd-helper unmask 'icegridregistry.service' >/dev/null || true
	fi
fi
# End automatically added section


exit 0
