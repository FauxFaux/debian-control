#! /bin/sh
set -e

case "$1" in
  purge)
	# remove the maildrophost logfile
	rm -f /var/log/zope-maildrophost.log
  ;;
esac

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d zope-maildrophost remove >/dev/null
fi
# End automatically added section
# Automatically added by dh_installzope
if which dzhandle >/dev/null; then
    case "$1" in remove)
	# remove:
	# - unregister sucessfully removed product

	dzhandle postrm-product -m "$*" zope-maildrophost /usr/share/zope/Products/MaildropHost MaildropHost
    esac
fi
# End automatically added section


exit 0
